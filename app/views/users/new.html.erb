<div style="max-width: 600px; margin: 60px auto;">
  <div style="background: #fff; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
    <h1 style="text-align: center; margin-bottom: 30px; color: #2c3e50;">Create Your Account</h1>
    
    <%= form_with model: @user, url: signup_path, method: :post, local: true do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-error" style="margin-bottom: 20px;">
          <h4 style="margin-bottom: 10px;">Please fix the following errors:</h4>
          <ul style="margin-left: 20px;">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
        <div class="form-group">
          <label class="form-label">First Name</label>
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'John', required: true, autofocus: true %>
        </div>
        
        <div class="form-group">
          <label class="form-label">Last Name</label>
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Doe', required: true %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="form-label">Email Address</label>
        <%= f.email_field :email, class: 'form-control', placeholder: 'you@example.com', required: true %>
      </div>
      
      <div class="form-group">
        <label class="form-label">Phone Number</label>
        <%= f.telephone_field :phone, class: 'form-control', placeholder: '+1 (555) 123-4567' %>
      </div>
      
      <div class="form-group">
        <label class="form-label">Password</label>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Minimum 6 characters', required: true %>
      </div>
      
      <div class="form-group">
        <label class="form-label">Confirm Password</label>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Re-enter your password', required: true %>
      </div>
      
      <div class="form-group">
        <%= f.submit 'Create Account', class: 'btn btn-primary', style: 'width: 100%; font-size: 18px; padding: 15px;' %>
      </div>
    <% end %>
    
    <div style="text-align: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid #ecf0f1;">
      <p style="color: #7f8c8d; margin-bottom: 10px;">Already have an account?</p>
      <%= link_to 'Login', login_path, class: 'btn btn-outline' %>
    </div>
  </div>
</div>
