<script>
  document.addEventListener('DOMContentLoaded', function () {
    const animated = document.querySelectorAll('[data-page="home"] .fade-in-up, [data-page="home"] .slide-in-right');
    animated.forEach((el) => {
      el.classList.add('opacity-0', 'translate-y-4');
    });

    function reveal() {
      const trigger = window.innerHeight * 0.9;
      animated.forEach((el) => {
        const rect = el.getBoundingClientRect();
        if (rect.top < trigger) {
          el.classList.remove('opacity-0', 'translate-y-4');
          el.classList.add('transition-all', 'duration-700', 'opacity-100', 'translate-y-0');
        }
      });
    }

    reveal();
    window.addEventListener('scroll', reveal);

    // === Auto-scroll for Trending strip: continuous circular rotation ===
    const trendingStrip = document.getElementById('trending-strip');
    if (trendingStrip) {
      const step = 220;        // approx width of one card (tweak if needed)
      const intervalMs = 1000; // 1 second

      function autoScrollTrending() {
        const maxScroll = trendingStrip.scrollWidth - trendingStrip.clientWidth;

        // If we're at (or very near) the end, instantly jump back to the start
        if (trendingStrip.scrollLeft >= maxScroll - 5) {
          trendingStrip.scrollLeft = 0;
        } else {
          // Move one card to the right (content appears to move left)
          trendingStrip.scrollBy({ left: step, behavior: 'smooth' });
        }
      }

      setInterval(autoScrollTrending, intervalMs);
    }
  });
</script>

