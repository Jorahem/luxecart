<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Welcome to LuxeCart</h1>
  
  <% if @featured_products.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Featured Products</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <% @featured_products.each do |product| %>
          <div class="border rounded-lg p-4">
            <h3 class="font-bold"><%= link_to product.name, product_path(product) %></h3>
            <p class="text-gray-600"><%= number_to_currency(product.current_price) %></p>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if @categories.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Shop by Category</h2>
      <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
        <% @categories.each do |category| %>
          <div class="text-center">
            <%= link_to category.name, category_path(category), class: "text-blue-600 hover:underline" %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
