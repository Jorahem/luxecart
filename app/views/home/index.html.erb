<!-- Hero Section -->
<div class="relative bg-indigo-900 h-[500px] flex items-center overflow-hidden">
  <div class="absolute inset-0 opacity-40 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80')"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 text-white">Elevate Your Style</h1>
    <p class="text-xl md:text-2xl max-w-2xl mb-10 text-indigo-100">Experience the future of premium shopping with LuxeCart. Curated collections from world-class brands delivered to your doorstep.</p>
    <div class="flex gap-4">
      <%= link_to "Shop Now", products_path, class: "bg-white text-indigo-900 px-8 py-4 rounded-full font-bold text-lg hover:bg-indigo-50 transition transform hover:scale-105" %>
      <%= link_to "View Collections", categories_path, class: "bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-indigo-900 transition" %>
    </div>
  </div>
</div>

<!-- Category Showcase -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-end mb-10">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">Shop by Category</h2>
        <div class="h-1.5 w-20 bg-indigo-600 mt-2 rounded-full"></div>
      </div>
      <%= link_to "View All", categories_path, class: "text-indigo-600 font-semibold hover:underline" %>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      <% @categories.each do |category| %>
        <%= link_to category_path(category), class: "group text-center" do %>
          <div class="bg-gray-100 rounded-2xl p-8 mb-4 group-hover:bg-indigo-50 transition">
            <i class="fa-solid fa-layer-group text-3xl text-indigo-600"></i>
          </div>
          <h3 class="font-bold text-gray-900 group-hover:text-indigo-600"><%= category.name %></h3>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Products</h2>
      <p class="text-gray-600 max-w-xl mx-auto">Handpicked premium items just for you. Discover our most popular selections.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <% @featured_products.each do |product| %>
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition group overflow-hidden border border-gray-100">
          <div class="h-64 bg-gray-200 relative overflow-hidden">
            <% if product.product_images.any? %>
              <%= image_tag product.product_images.first.image, class: "w-full h-full object-cover group-hover:scale-110 transition duration-500" %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center text-gray-400">
                <i class="fa-regular fa-image text-5xl"></i>
              </div>
            <% end %>
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition flex items-center justify-center opacity-0 group-hover:opacity-100">
               <%= link_to "View Details", product_path(product), class: "bg-white text-gray-900 px-6 py-2 rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition" %>
            </div>
          </div>
          <div class="p-6">
            <p class="text-xs text-indigo-600 font-bold uppercase tracking-wider mb-2"><%= product.category&.name %></p>
            <h3 class="text-lg font-bold text-gray-900 mb-2 truncate"><%= product.name %></h3>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-black text-gray-900"><%= number_to_currency(product.price) %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>