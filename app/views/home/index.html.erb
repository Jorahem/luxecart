<div class="bg-gray-50 min-h-screen">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="container-custom">
      <div class="text-center animate-fade-in">
        <h1 class="mb-6 text-gradient-luxury" style="color: white;">Welcome to LuxeCart</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Experience premium shopping with professional styling powered by Tailwind CSS
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <button class="btn btn-primary">Shop Now</button>
          <button class="btn btn-luxury">View Featured</button>
          <button class="btn btn-outline">Learn More</button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section">
    <div class="container-custom">
      <h2 class="text-center mb-12 text-gradient">Professional CSS Styling</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature Card 1 -->
        <div class="card animate-slide-up">
          <div class="p-8">
            <div class="badge badge-featured mb-4">Featured</div>
            <h3 class="mb-4">Beautiful Cards</h3>
            <p class="text-gray-600">
              Premium card components with hover effects and smooth transitions.
            </p>
          </div>
        </div>

        <!-- Feature Card 2 -->
        <div class="card animate-slide-up" style="animation-delay: 0.1s;">
          <div class="p-8">
            <div class="badge badge-new mb-4">New</div>
            <h3 class="mb-4">Custom Components</h3>
            <p class="text-gray-600">
              Pre-built components for buttons, forms, badges, and more.
            </p>
          </div>
        </div>

        <!-- Feature Card 3 -->
        <div class="card animate-slide-up" style="animation-delay: 0.2s;">
          <div class="p-8">
            <div class="badge badge-sale mb-4">Popular</div>
            <h3 class="mb-4">Smooth Animations</h3>
            <p class="text-gray-600">
              Elegant animations and transitions throughout the interface.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Grid Demo -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-center mb-12">Product Showcase</h2>
      
      <div class="product-grid">
        <% (1..4).each do |i| %>
          <div class="card-product group">
            <div class="overflow-hidden bg-gray-200 h-64">
              <div class="product-image-zoom bg-gradient-to-br from-blue-400 to-purple-400 h-full flex items-center justify-center">
                <span class="text-white text-6xl font-bold"><%= i %></span>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg">Product <%= i %></h3>
                <div class="badge badge-sale">Sale</div>
              </div>
              <div class="stars mb-3">
                <% 5.times do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
                <span class="ml-2 text-sm text-gray-600">(4.5)</span>
              </div>
              <div class="flex items-center gap-2 mb-4">
                <span class="price-sale">$99.99</span>
                <span class="price-strikethrough">$149.99</span>
              </div>
              <button class="btn btn-primary w-full" data-add-to-cart>
                Add to Cart
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Form Demo -->
  <section class="section">
    <div class="container-custom max-w-2xl">
      <h2 class="text-center mb-12">Professional Forms</h2>
      
      <div class="card">
        <div class="p-8">
          <form>
            <div class="mb-6">
              <label class="form-label">Email Address</label>
              <input type="email" class="form-input" placeholder="you@example.com">
            </div>
            
            <div class="mb-6">
              <label class="form-label">Message</label>
              <textarea class="form-input" rows="4" placeholder="Your message here..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-full">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Alerts Demo -->
  <section class="section bg-white">
    <div class="container-custom max-w-3xl">
      <h2 class="text-center mb-12">Alert Components</h2>
      
      <div class="space-y-4">
        <div class="alert alert-success">
          <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <div>
            <strong class="font-semibold">Success!</strong>
            <p>Your changes have been saved successfully.</p>
          </div>
        </div>

        <div class="alert alert-error">
          <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          <div>
            <strong class="font-semibold">Error!</strong>
            <p>There was a problem processing your request.</p>
          </div>
        </div>

        <div class="alert alert-warning">
          <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <div>
            <strong class="font-semibold">Warning!</strong>
            <p>Please review your information before proceeding.</p>
          </div>
        </div>

        <div class="alert alert-info">
          <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          <div>
            <strong class="font-semibold">Info:</strong>
            <p>New features have been added to your account.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Loading Spinner Demo -->
  <section class="section">
    <div class="container-custom">
      <h2 class="text-center mb-12">Loading States</h2>
      <div class="flex justify-center gap-8">
        <div class="text-center">
          <div class="spinner mb-4"></div>
          <p class="text-gray-600">Loading...</p>
        </div>
      </div>
    </div>
  </section>
</div>
