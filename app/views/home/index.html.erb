<div class="space-y-12">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg p-12 text-center">
    <h1 class="text-4xl font-bold mb-4">Welcome to LuxeCart</h1>
    <p class="text-xl mb-8">Discover premium products at amazing prices</p>
    <%= link_to "Shop Now", products_path, class: "bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 inline-block" %>
  </div>

  <!-- Featured Products -->
  <div>
    <h2 class="text-3xl font-bold mb-6">Featured Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% if defined?(Product) && Product.featured.limit(4).any? %>
        <% Product.featured.limit(4).each do |product| %>
          <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
            <div class="p-6">
              <h3 class="font-semibold text-lg mb-2"><%= product.name %></h3>
              <p class="text-gray-600 text-sm mb-4"><%= truncate(product.description, length: 80) %></p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-indigo-600">
                  <%= currency_format(product.current_price) %>
                </span>
                <%= link_to "View", product_path(product), class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-4 text-center text-gray-500 py-12">
          <p>No featured products available yet.</p>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Add Products in Admin Panel", admin_products_path, class: "text-indigo-600 hover:text-indigo-900 mt-2 inline-block" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Categories -->
  <div>
    <h2 class="text-3xl font-bold mb-6">Shop by Category</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      <% if defined?(Category) && Category.active.root_categories.limit(6).any? %>
        <% Category.active.root_categories.limit(6).each do |category| %>
          <%= link_to category_path(category), class: "bg-white rounded-lg shadow p-6 text-center hover:shadow-lg transition-shadow" do %>
            <h3 class="font-semibold"><%= category.name %></h3>
          <% end %>
        <% end %>
      <% else %>
        <div class="col-span-6 text-center text-gray-500 py-12">
          <p>No categories available yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
