<h1 class="section-title">Shop by Category</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px;">
  <% Category.where(active: true).each do |category| %>
    <a href="<%= category_path(category) %>" style="text-decoration: none;">
      <div style="background: #fff; padding: 40px; border-radius: 8px; text-align: center; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: all 0.3s;" 
           onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.15)';"
           onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 8px rgba(0,0,0,0.1)';">
        <div style="font-size: 48px; margin-bottom: 15px;">ğŸ“</div>
        <h3 style="font-size: 20px; font-weight: 600; color: #2c3e50; margin-bottom: 10px;"><%= category.name %></h3>
        <% if category.description.present? %>
          <p style="color: #7f8c8d; font-size: 14px;"><%= truncate(category.description, length: 100) %></p>
        <% end %>
      </div>
    </a>
  <% end %>
</div>
