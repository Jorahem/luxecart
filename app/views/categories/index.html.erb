<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-extrabold text-gray-900">Categories</h1>
    <%= link_to 'View All Products', products_path, class: 'text-indigo-600 hover:underline' %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: 'group block bg-white rounded-2xl shadow-sm hover:shadow-lg overflow-hidden border border-gray-100' do %>
        <div class="p-6 text-center">
          <div class="flex items-center justify-center h-20 mb-4">
            <i class="fa-solid fa-layer-group text-3xl text-indigo-600"></i>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-1"><%= category.name %></h3>
          <% if category.description.present? %>
            <p class="text-sm text-gray-500 truncate"><%= category.description %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to 'Browse All Products', products_path, class: 'inline-block bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700' %>
  </div>
</div>
