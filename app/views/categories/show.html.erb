<%# Full Category show page without Add buttons (category-only listing) %>

<%# --- Helpers (defined in template to avoid inline-rescue pitfalls) --- %>
<%#
  safe_attached?(obj) => boolean
  image_for(obj) => url string or nil
%>
<% def safe_attached?(obj)
     return false unless obj.respond_to?(:attached?)
     begin
       obj.attached?
     rescue StandardError
       false
     end
   end

   def image_for(obj)
     return nil if obj.nil?
     if safe_attached?(obj)
       begin
         url_for(obj)
       rescue StandardError
         nil
       end
     else
       s = obj.to_s
       s.present? ? s : nil
     end
   end
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Breadcrumb + Category header + Cart badge -->
  <div class="flex items-center justify-between mb-4">
    <nav class="text-sm text-gray-500" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Home", root_path, class: "hover:underline" %></li>
        <li>/</li>
        <li><%= link_to "Categories", categories_path, class: "hover:underline" %></li>
        <li>/</li>
        <li class="text-gray-900 font-semibold"><%= @category.name %></li>
      </ol>
    </nav>

    <!-- Cart link + badge (unchanged) -->
    <div class="flex items-center gap-4">
      <%= link_to cart_path, class: "inline-flex items-center gap-2 text-sm text-gray-700 hover:text-gray-900" do %>
        <i class="fa-solid fa-cart-shopping"></i>
        <span id="cart-count" class="inline-flex items-center justify-center bg-indigo-600 text-white rounded-full px-2 py-0.5 text-xs">
          <%= (defined?(current_cart) && current_cart.try(:total_items)) || 0 %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Main content: hero + products (sidebar removed) -->
    <div class="lg:col-span-4">
      <div class="relative bg-gradient-to-r from-white to-gray-50 rounded-2xl overflow-hidden mb-8 p-6 flex flex-col md:flex-row items-center gap-6">
        <div class="flex-1">
          <h1 class="text-3xl font-extrabold text-gray-900 mb-2"><%= @category.name %></h1>
          <% if @category.description.present? %>
            <p class="text-gray-600 mb-4"><%= @category.description %></p>
          <% end %>
          <div class="flex gap-3">
            <%= link_to "Shop all", category_path(@category), class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md shadow-sm hover:bg-indigo-700" %>
            <%= link_to "Contact us", contact_path, class: "inline-flex items-center px-4 py-2 border rounded-md text-sm text-gray-700 hover:bg-gray-50" %>
          </div>
        </div>

        <div class="w-full md:w-1/3">
          <% if @category.respond_to?(:image) && @category.image.present? %>
            <% img = image_for(@category.image) || @category.image %>
            <%= image_tag img, alt: @category.name, class: "w-full h-40 object-cover rounded-xl shadow-sm" %>
          <% elsif @category.respond_to?(:image_url) && @category.image_url.present? %>
            <%= image_tag @category.image_url, alt: @category.name, class: "w-full h-40 object-cover rounded-xl shadow-sm" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1524758631624-e2822e304c36?q=80&w=1200&auto=format&fit=crop" alt="<%= @category.name %>" class="w-full h-40 object-cover rounded-xl shadow-sm">
          <% end %>
        </div>
      </div>

      <!-- Products grid -->
      <div class="flex items-center justify-between mb-6">
        <div class="text-sm text-gray-600">
          <% product_count = @products.respond_to?(:total_count) ? @products.total_count : @products.size %>
          <%= pluralize(product_count, "product") %> found
        </div>
      </div>

      <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if @products.present? && @products.any? %>
          <%= render partial: "products/product", collection: @products, as: :product %>
        <% else %>
          <div class="bg-white p-8 rounded-lg shadow text-center">
            <h3 class="font-semibold mb-2">No products found</h3>
            <p class="text-sm text-gray-500">Try a different search or check back later.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>