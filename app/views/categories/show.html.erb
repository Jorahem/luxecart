                <% image_src = image_for(pi.image) || (pi.respond_to?(:image_url) ? pi.image_url : nil) || (pi.respond_to?(:image) ? pi.image : nil) %>
              <% end %>
              <% image_src ||= (product.respond_to?(:image_url) ? product.image_url.presence : nil) %>
              <% image_src ||= image_for(product.image) %>

              <% if image_src.present? %>
