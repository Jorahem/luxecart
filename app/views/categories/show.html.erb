<%# Full Category show page without Add buttons (category-only listing) %>

<%# --- Helpers (defined in template to avoid inline-rescue pitfalls) --- %>
<%#
  safe_attached?(obj) => boolean
  image_for(obj) => url string or nil
%>
<% def safe_attached?(obj)
     return false unless obj.respond_to?(:attached?)
     begin
       obj.attached?
     rescue StandardError
       false
     end
   end

   def image_for(obj)
     return nil if obj.nil?
     if safe_attached?(obj)
       begin
         url_for(obj)
       rescue StandardError
         nil
       end
     else
       s = obj.to_s
       s.present? ? s : nil
     end
   end
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Breadcrumb + Category header + Cart badge -->
  <div class="flex items-center justify-between mb-4">
    <nav class="text-sm text-gray-500" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Home", root_path, class: "hover:underline" %></li>
        <li>/</li>
        <li><%= link_to "Categories", categories_path, class: "hover:underline" %></li>
        <li>/</li>
        <li class="text-gray-900 font-semibold"><%= @category.name %></li>
      </ol>
    </nav>

    <!-- Cart link + badge (unchanged) -->
    <div class="flex items-center gap-4">
      <%= link_to cart_path, class: "inline-flex items-center gap-2 text-sm text-gray-700 hover:text-gray-900" do %>
        <i class="fa-solid fa-cart-shopping"></i>
        <span id="cart-count" class="inline-flex items-center justify-center bg-indigo-600 text-white rounded-full px-2 py-0.5 text-xs">
          <%= (defined?(current_cart) && current_cart.try(:total_items)) || 0 %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar -->
    <aside class="lg:col-span-1">
      <div class="bg-white p-6 rounded-2xl shadow-sm sticky top-20">
        <h3 class="text-lg font-bold text-gray-900 mb-2">Refine</h3>
        <form id="filters-form" method="get" action="">
          <!-- Price, Brand, Sort (same as before) -->
          <div class="mb-4">
            <label class="text-sm font-medium text-gray-700">Price</label>
            <div class="flex gap-2 mt-2">
              <input name="min_price" value="<%= params[:min_price] %>" placeholder="Min" class="w-1/2 px-3 py-2 rounded-md border border-gray-200 text-sm">
              <input name="max_price" value="<%= params[:max_price] %>" placeholder="Max" class="w-1/2 px-3 py-2 rounded-md border border-gray-200 text-sm">
            </div>
          </div>

          <% if defined?(Brand) && Brand.any? %>
            <div class="mb-4">
              <label class="text-sm font-medium text-gray-700">Brand</label>
              <div class="mt-2 space-y-2 max-h-40 overflow-auto pr-2">
                <% Brand.order(:name).each do |b| %>
                  <div>
                    <label class="inline-flex items-center text-sm">
                      <input type="checkbox" name="brand[]" value="<%= b.id %>" <%= 'checked' if Array(params[:brand]).map(&:to_s).include?(b.id.to_s) %> class="form-checkbox h-4 w-4 text-indigo-600">
                      <span class="ml-2"><%= b.name %></span>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="mb-4">
            <label class="text-sm font-medium text-gray-700">Sort</label>
            <select name="sort" class="mt-2 block w-full rounded-md border border-gray-200 p-2 text-sm">
              <option value="">Default</option>
              <option value="price_asc" <%= 'selected' if params[:sort] == 'price_asc' %>>Price: Low → High</option>
              <option value="price_desc" <%= 'selected' if params[:sort] == 'price_desc' %>>Price: High → Low</option>
              <option value="newest" <%= 'selected' if params[:sort] == 'newest' %>>Newest</option>
            </select>
          </div>

          <div class="flex gap-2">
            <button type="submit" class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Apply</button>
            <a href="<%= category_path(@category) %>" class="inline-flex items-center justify-center px-3 py-2 border rounded-md text-sm">Reset</a>
          </div>
        </form>

        <div class="mt-6 border-t pt-4">
          <h4 class="text-sm font-semibold text-gray-700 mb-2">Quick links</h4>
          <ul class="space-y-2 text-sm">
            <li><%= link_to "Top Sellers", products_path(q: 'top'), class: "text-indigo-600 hover:underline" %></li>
            <li><%= link_to "New arrivals", products_path(q: 'new'), class: "text-indigo-600 hover:underline" %></li>
            <li><%= link_to "Sale items", products_path(q: 'sale'), class: "text-indigo-600 hover:underline" %></li>
          </ul>
        </div>
      </div>
    </aside>

    <!-- Main content: hero + gallery + products (Add buttons removed) -->
    <div class="lg:col-span-3">
      <div class="relative bg-gradient-to-r from-white to-gray-50 rounded-2xl overflow-hidden mb-8 p-6 flex flex-col md:flex-row items-center gap-6">
        <div class="flex-1">
          <h1 class="text-3xl font-extrabold text-gray-900 mb-2"><%= @category.name %></h1>
          <% if @category.description.present? %>
            <p class="text-gray-600 mb-4"><%= @category.description %></p>
          <% end %>
          <div class="flex gap-3">
            <%= link_to "Shop all", category_path(@category), class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md shadow-sm hover:bg-indigo-700" %>
            <%= link_to "Contact us", contact_path, class: "inline-flex items-center px-4 py-2 border rounded-md text-sm text-gray-700 hover:bg-gray-50" %>
          </div>
        </div>

        <div class="w-full md:w-1/3">
          <% if @category.respond_to?(:image) && @category.image.present? %>
            <% img = image_for(@category.image) || @category.image %>
            <%= image_tag img, alt: @category.name, class: "w-full h-40 object-cover rounded-xl shadow-sm" %>
          <% elsif @category.respond_to?(:image_url) && @category.image_url.present? %>
            <%= image_tag @category.image_url, alt: @category.name, class: "w-full h-40 object-cover rounded-xl shadow-sm" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1524758631624-e2822e304c36?q=80&w=1200&auto=format&fit=crop" alt="<%= @category.name %>" class="w-full h-40 object-cover rounded-xl shadow-sm">
          <% end %>
        </div>
      </div>

      <%# Underwear gallery: buttons removed so these are read-only slots %>
      <% men_images = [
        "https://m.media-amazon.com/images/I/51bed6hGfqL._AC_SL1000_.jpg",
        "https://via.placeholder.com/600x600.png?text=Men+2",
        "https://via.placeholder.com/600x600.png?text=Men+3",
        "https://via.placeholder.com/600x600.png?text=Men+4",
        "https://via.placeholder.com/600x600.png?text=Men+5",
        "https://via.placeholder.com/600x600.png?text=Men+6"
      ] %>

      <% women_images = [
        "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRj0NoQJyvI_BIjhm6bMNUD5J_KyTZESCWLYw&s",
        "https://via.placeholder.com/600x600.png?text=Women+2",
        "https://via.placeholder.com/600x600.png?text=Women+3",
        "https://via.placeholder.com/600x600.png?text=Women+4",
        "https://via.placeholder.com/600x600.png?text=Women+5",
        "https://via.placeholder.com/600x600.png?text=Women+6"
      ] %>

      <% children_images = [
        "https://kytebaby.com/cdn/shop/files/1703CS-01_457d5168-470b-4ae0-a5f9-3ac6964ac29e.jpg?v=1758285639&width=3000",
        "https://via.placeholder.com/600x600.png?text=Child+2",
        "https://via.placeholder.com/600x600.png?text=Child+3",
        "https://via.placeholder.com/600x600.png?text=Child+4",
        "https://via.placeholder.com/600x600.png?text=Child+5",
        "https://via.placeholder.com/600x600.png?text=Child+6"
      ] %>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Explore Underwear Collections</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% { 'Men' => men_images, 'Women' => women_images, 'Children' => children_images }.each do |subname, imgs| %>
            <section class="bg-white p-4 rounded-2xl shadow-sm">
              <h3 class="text-lg font-semibold text-gray-800 mb-3"><%= subname %></h3>

              <% subcat = Category.find_by(name: subname) rescue nil %>
              <% products = subcat&.products&.limit(6)&.to_a || [] %>

              <div class="grid grid-cols-3 gap-3">
                <% 6.times do |i| %>
                  <% p = products[i] %>
                  <% image_src = nil %>
                  <% if p %>
                    <% if p.respond_to?(:product_images) && p.product_images.any? %>
                      <% pi = p.product_images.first %>
                      <% image_src ||= image_for(pi.image) if pi.respond_to?(:image) %>
                      <% image_src ||= (pi.respond_to?(:image_url) ? pi.image_url : nil) %>
                    <% end %>
                    <% image_src ||= (p.respond_to?(:image_url) ? p.image_url : nil) %>
                    <% image_src ||= image_for(p.image) if p.respond_to?(:image) %>
                  <% end %>
                  <% image_src ||= imgs[i] %>

                  <div class="flex flex-col items-center text-center">
                    <% if p %>
                      <%= link_to product_path(p) do %>
                        <img src="<%= image_src %>" alt="<%= "#{subname} #{i+1}" %>" class="w-full h-32 object-cover rounded" />
                      <% end %>
                    <% else %>
                      <img src="<%= image_src %>" alt="<%= "#{subname} placeholder #{i+1}" %>" class="w-full h-32 object-cover rounded" />
                    <% end %>

                    <div class="mt-2 w-full">
                      <div class="text-sm font-medium text-gray-800 truncate">
                        <% if p %>
                          <%= link_to p.name, product_path(p), class: "hover:underline" %>
                        <% else %>
                          <%= "#{subname} item #{i+1}" %>
                        <% end %>
                      </div>

                      <div class="text-sm text-gray-600">
                        <% if p && p.respond_to?(:price) %>
                          <%= number_to_currency(p.price) %>
                        <% end %>
                      </div>

                      <%# Add buttons removed intentionally for categories listing %>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>
        </div>
      </div>

      <!-- Products grid (read-only on categories page: Add buttons removed) -->
      <div class="flex items-center justify-between mb-6">
        <div class="text-sm text-gray-600">
          <% product_count = @products.respond_to?(:total_count) ? @products.total_count : @products.size %>
          <%= pluralize(product_count, "product") %> found
        </div>
      </div>

      <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
          <div class="product-card relative bg-white border border-gray-100 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition">
            <div class="relative h-64 bg-gray-50 overflow-hidden">
              <% image_src = nil %>
              <% if product.respond_to?(:product_images) && product.product_images.any? %>
                <% pi = product.product_images.first %>
                <% image_src = image_for(pi.image) || (pi.respond_to?(:image_url) ? pi.image_url : nil) || (pi.respond_to?(:image) ? pi.image : nil) %>
              <% end %>
              <% image_src ||= (product.respond_to?(:image_url) ? product.image_url.presence : nil) %>
              <% image_src ||= image_for(product.image) %>

              <% if image_src.present? %>
                <%= image_tag image_src, alt: product.name, class: "w-full h-full object-cover object-center transition-transform transform group-hover:scale-105" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-300">
                  <i class="fa-regular fa-image text-6xl"></i>
                </div>
              <% end %>
            </div>

            <div class="p-5">
              <p class="text-xs text-indigo-600 font-semibold uppercase"><%= product.category&.name %></p>
              <h3 class="text-lg font-bold text-gray-900 mt-1 mb-2 truncate"><%= link_to product.name, product_path(product) %></h3>
              <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= truncate(product.description, length: 120) %></p>

              <div class="flex items-center justify-between">
                <div class="text-2xl font-black text-gray-900"><%= number_to_currency(product.price) %></div>
                <div class="flex items-center gap-2">
                  <%# Add button removed on categories page; keep product view link instead %>
                  <%= link_to product_path(product), class: "inline-flex items-center px-4 py-2 border rounded-full text-sm text-gray-700 hover:bg-gray-50" do %>
                    View
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>