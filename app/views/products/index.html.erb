<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold">Products</h1>
  </div>

  <!-- Filters and Search (placeholder) -->
  <div class="bg-white rounded-lg shadow p-4">
    <%= form_with url: products_path, method: :get, class: "flex space-x-4" do |f| %>
      <%= f.text_field :search, placeholder: "Search products...", class: "flex-1 rounded-md border-gray-300", value: params[:search] %>
      <%= f.submit "Search", class: "bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700" %>
    <% end %>
  </div>

  <!-- Products Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
        <div class="p-6">
          <% if product.on_sale? %>
            <span class="bg-red-500 text-white text-xs px-2 py-1 rounded mb-2 inline-block">
              <%= product.discount_percentage.to_i %>% OFF
            </span>
          <% end %>
          
          <h3 class="font-semibold text-lg mb-2"><%= link_to product.name, product_path(product), class: "hover:text-indigo-600" %></h3>
          <p class="text-gray-600 text-sm mb-2"><%= product.category.name %></p>
          <p class="text-gray-600 text-sm mb-4"><%= truncate(product.description, length: 80) %></p>
          
          <div class="flex justify-between items-center">
            <div>
              <% if product.on_sale? %>
                <span class="text-gray-500 line-through text-sm"><%= currency_format(product.price) %></span>
                <span class="text-2xl font-bold text-red-600 block"><%= currency_format(product.sale_price) %></span>
              <% else %>
                <span class="text-2xl font-bold text-indigo-600"><%= currency_format(product.price) %></span>
              <% end %>
            </div>
            
            <% if product.in_stock? %>
              <%= button_to "Add to Cart", cart_add_item_path(product), class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm" %>
            <% else %>
              <span class="text-red-600 text-sm font-semibold">Out of Stock</span>
            <% end %>
          </div>
          
          <% if product.reviews.approved.any? %>
            <div class="mt-2 text-sm text-gray-600">
              <%= 'â­' * product.average_rating.to_i %> 
              (<%= product.reviews.approved.count %> reviews)
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-8">
    <%= paginate @products %>
  </div>
</div>
