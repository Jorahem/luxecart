<h1 class="page-title">Products</h1>

<% if @products.empty? %>
  <p class="empty">No products available yet.</p>
<% else %>
  <div class="products-grid">
    <%= render partial: 'product_card', collection: @products, as: :product %>
  </div>

  <div class="pagination">
    <%# If you use Kaminari or will_paginate, pagination helpers go here %>
    <%= paginate(@products) if respond_to?(:paginate) && defined?(paginate) %>
  </div>
<% end %>