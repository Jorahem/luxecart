<%# Products index - server-side search, sort and pagination (Tailwind) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header & controls -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
    <div>
      <h1 class="text-3xl font-extrabold">Shop Products</h1>
      <p class="mt-1 text-sm text-gray-500">Explore our curated selection — search, sort and add to cart.</p>
    </div>

    <form id="products-controls" method="get" class="flex items-center gap-3">
      <label class="relative block">
        <span class="sr-only">Search products</span>
        <input name="q" value="<%= h(params[:q]) %>" type="search" placeholder="Search products, e.g. sneakers"
               class="pl-10 pr-3 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 w-64 text-sm" />
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
          <i class="fa fa-search"></i>
        </span>
      </label>

      <select name="sort" onchange="this.form.submit()" class="rounded-lg border border-gray-200 py-2 px-3 text-sm">
        <option value="" <%= params[:sort].blank? ? 'selected' : '' %>>Sort: Featured</option>
        <option value="price_asc" <%= params[:sort] == 'price_asc' ? 'selected' : '' %>>Price: Low → High</option>
        <option value="price_desc" <%= params[:sort] == 'price_desc' ? 'selected' : '' %>>Price: High → Low</option>
        <option value="newest" <%= params[:sort] == 'newest' ? 'selected' : '' %>>Newest</option>
      </select>

      <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded">Apply</button>
    </form>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
 <!-- Sidebar filters -->
<aside class="hidden lg:block">
  <div class="bg-white rounded-lg shadow p-4 sticky top-20">
    <h3 class="font-semibold mb-3">Filters</h3>

    <% if @categories.present? %>
      <div class="mb-4">
        <div class="text-sm font-medium mb-2">Categories</div>
        <ul class="space-y-2 text-sm text-gray-600">
          <% @categories.each do |c| %>
            <% # build category param as name (readable) - fallback to id if name missing %>
            <% cat_param = (c.try(:slug).presence || c.name).to_s %>
            <% active = (@selected_category && @selected_category.id == c.id) || (params[:category].to_s.downcase == cat_param.to_s.downcase) %>

            <li>
              <%= link_to products_path(q: params[:q], sort: params[:sort], category: cat_param),
                          class: "inline-flex items-center gap-2 #{active ? 'text-indigo-600 font-semibold' : 'text-gray-600 hover:text-indigo-600'}" do %>
                <span><%= c.name %></span>
                <% if active %>
                  <span class="text-xs text-indigo-500 ml-1">•</span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= link_to "Clear filters", products_path(q: params[:q], sort: params[:sort]), class: "text-sm text-gray-500 hover:text-indigo-600" %>
    </div>
  </div>
</aside>

    <!-- Products list -->
    <section class="lg:col-span-3">
      <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if @products.any? %>
          <%= render partial: 'product_card', collection: @products, as: :product %>
        <% else %>
          <div class="bg-white p-8 rounded-lg shadow text-center">
            <h3 class="font-semibold mb-2">No products found</h3>
            <p class="text-sm text-gray-500">Try a different search or check back later.</p>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex justify-center">
        <% if defined?(Kaminari) && @products.respond_to?(:total_pages) && @products.total_pages > 1 %>
          <%= paginate @products, theme: 'tailwind' %>
        <% else %>
          <!-- Fallback: Load more (no server-side pagination configured) -->
          <button id="load-more" class="px-5 py-2 rounded-lg border border-gray-200 bg-white text-sm hover:bg-gray-50">Load more</button>
        <% end %>
      </div>
    </section>
  </div>
</div>