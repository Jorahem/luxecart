<div class="space-y-6">
  <div class="bg-white rounded-lg shadow p-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Product Image Placeholder -->
      <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
        <span class="text-gray-500">Product Image</span>
      </div>

      <!-- Product Info -->
      <div>
        <% if @product.on_sale? %>
          <span class="bg-red-500 text-white text-sm px-3 py-1 rounded mb-2 inline-block">
            <%= @product.discount_percentage.to_i %>% OFF
          </span>
        <% end %>
        
        <h1 class="text-3xl font-bold mb-2"><%= @product.name %></h1>
        
        <div class="mb-4">
          <%= link_to @product.category.name, category_path(@product.category), class: "text-indigo-600 hover:text-indigo-900" %>
          <span class="text-gray-400 mx-2">|</span>
          <%= link_to @product.brand.name, brand_path(@product.brand), class: "text-indigo-600 hover:text-indigo-900" %>
        </div>

        <% if @product.reviews.approved.any? %>
          <div class="mb-4">
            <%= '⭐' * @product.average_rating.to_i %>
            <span class="text-gray-600 ml-2">(<%= @product.reviews.approved.count %> reviews)</span>
          </div>
        <% end %>

        <div class="mb-6">
          <% if @product.on_sale? %>
            <span class="text-gray-500 line-through text-xl mr-2"><%= currency_format(@product.price) %></span>
            <span class="text-4xl font-bold text-red-600"><%= currency_format(@product.sale_price) %></span>
          <% else %>
            <span class="text-4xl font-bold text-indigo-600"><%= currency_format(@product.price) %></span>
          <% end %>
        </div>

        <div class="mb-6">
          <p class="text-gray-700 leading-relaxed"><%= @product.description %></p>
        </div>

        <div class="mb-6">
          <p class="text-sm text-gray-600">SKU: <%= @product.sku %></p>
          <p class="text-sm <%= @product.stock_quantity < 10 ? 'text-red-600' : 'text-green-600' %> font-semibold">
            <% if @product.in_stock? %>
              <%= @product.stock_quantity %> in stock
            <% else %>
              Out of stock
            <% end %>
          </p>
        </div>

        <div class="flex space-x-4">
          <% if @product.in_stock? %>
            <%= button_to "Add to Cart", cart_add_item_path(@product), class: "bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-700 font-semibold flex-1" %>
            <%= button_to "Add to Wishlist", wishlist_add_path(@product), class: "bg-gray-200 text-gray-800 px-8 py-3 rounded-lg hover:bg-gray-300 font-semibold" %>
          <% else %>
            <button disabled class="bg-gray-400 text-white px-8 py-3 rounded-lg cursor-not-allowed flex-1">
              Out of Stock
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="bg-white rounded-lg shadow p-8">
    <h2 class="text-2xl font-bold mb-6">Customer Reviews</h2>
    
    <% if user_signed_in? %>
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="font-semibold mb-4">Write a Review</h3>
        <%= form_with model: [@product, Review.new], url: reviews_path, class: "space-y-4" do |f| %>
          <%= f.hidden_field :product_id, value: @product.id %>
          
          <div>
            <%= f.label :rating, "Rating", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :rating, (1..5).map { |i| ["#{i} Stars", i] }, {}, class: "rounded-md border-gray-300" %>
          </div>

          <div>
            <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :title, class: "w-full rounded-md border-gray-300" %>
          </div>

          <div>
            <%= f.label :comment, "Your Review", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :comment, rows: 4, class: "w-full rounded-md border-gray-300" %>
          </div>

          <%= f.submit "Submit Review", class: "bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700" %>
        <% end %>
      </div>
    <% end %>

    <div class="space-y-6">
      <% @product.reviews.approved.recent.each do |review| %>
        <div class="border-b pb-6">
          <div class="flex items-center justify-between mb-2">
            <div>
              <div class="text-yellow-400"><%= '⭐' * review.rating %></div>
              <p class="font-semibold"><%= review.title %></p>
            </div>
            <p class="text-sm text-gray-600"><%= review.created_at.strftime('%B %d, %Y') %></p>
          </div>
          <p class="text-gray-700 mb-2"><%= review.comment %></p>
          <p class="text-sm text-gray-600">By <%= review.user.full_name %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
