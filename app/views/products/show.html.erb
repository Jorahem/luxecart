<div class="product-show grid">
  <div class="left">
    <% if @product.image.present? %>
      <img src="<%= @product.image %>" alt="<%= @product.name %>" class="product-show-image" />
    <% else %>
      <div class="placeholder-image large">No image</div>
    <% end %>
  </div>

  <div class="right">
    <h1 class="product-name"><%= @product.name %></h1>
    <p class="product-price"><%= number_to_currency(@product.price) %></p>

    <div class="product-description"><%= simple_format(@product.description) %></div>

    <div class="product-actions">
      <button class="btn btn-primary add-to-cart" data-product-id="<%= @product.id %>">Add to cart</button>
      <%= link_to 'Back to products', products_path, class: 'btn btn-link' %>
    </div>
  </div>
</div>