<div style="max-width: 500px; margin: 60px auto;">
  <div style="background: #fff; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
    <h1 style="text-align: center; margin-bottom: 30px; color: #2c3e50;">Login to Luxecart</h1>
    
    <%= form_with url: login_path, method: :post, local: true do %>
      <div class="form-group">
        <label class="form-label">Email Address</label>
        <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'you@example.com', required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <label class="form-label">Password</label>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password', required: true %>
      </div>
      
      <div class="form-group">
        <%= submit_tag 'Login', class: 'btn btn-primary', style: 'width: 100%; font-size: 18px; padding: 15px;' %>
      </div>
    <% end %>
    
    <div style="text-align: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid #ecf0f1;">
      <p style="color: #7f8c8d; margin-bottom: 10px;">Don't have an account?</p>
      <%= link_to 'Sign Up Now', signup_path, class: 'btn btn-outline' %>
    </div>
  </div>
</div>
