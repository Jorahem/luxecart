<% category_collections.each do |category_name, products| %>
  <section class="bg-white p-4 rounded-2xl shadow-sm mb-8">
    <h2 class="text-xl font-semibold mb-4"><%= category_name %> Picks</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% products.each do |prod| %>
        <div class="rounded-lg border p-4 flex flex-col bg-white">
          <div class="w-full h-44 overflow-hidden rounded mb-3">
            <img src="<%= prod[:image] %>" alt="<%= prod[:name] %>" class="w-full h-full object-cover">
          </div>

          <div class="flex-1">
            <div class="font-semibold text-sm mb-1"><%= prod[:name] %></div>
            <div class="text-gray-600 text-sm mb-2"><%= prod[:description] %></div>
          </div>

          <div class="mt-2 text-lg font-bold"><%= number_to_currency(prod[:price]) %></div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>