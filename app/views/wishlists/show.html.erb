<div class="space-y-6">
  <h1 class="text-3xl font-bold">My Wishlist</h1>

  <% if @wishlist_items.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @wishlist_items.each do |item| %>
        <% product = item.product %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
          <div class="p-6">
            <% if product.on_sale? %>
              <span class="bg-red-500 text-white text-xs px-2 py-1 rounded mb-2 inline-block">
                <%= product.discount_percentage.to_i %>% OFF
              </span>
            <% end %>
            
            <h3 class="font-semibold text-lg mb-2">
              <%= link_to product.name, product_path(product), class: "hover:text-indigo-600" %>
            </h3>
            <p class="text-gray-600 text-sm mb-2"><%= product.category.name %></p>
            <p class="text-gray-600 text-sm mb-4"><%= truncate(product.description, length: 80) %></p>
            
            <div class="mb-4">
              <% if product.on_sale? %>
                <span class="text-gray-500 line-through text-sm"><%= currency_format(product.price) %></span>
                <span class="text-2xl font-bold text-red-600 block"><%= currency_format(product.sale_price) %></span>
              <% else %>
                <span class="text-2xl font-bold text-indigo-600"><%= currency_format(product.price) %></span>
              <% end %>
            </div>

            <% if product.reviews.approved.any? %>
              <div class="mb-4 text-sm text-gray-600">
                <%= 'â­' * product.average_rating.to_i %> 
                (<%= product.reviews.approved.count %>)
              </div>
            <% end %>

            <div class="flex space-x-2">
              <% if product.in_stock? %>
                <%= button_to "Add to Cart", cart_add_item_path(product), class: "flex-1 bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm text-center" %>
              <% else %>
                <button disabled class="flex-1 bg-gray-400 text-white px-4 py-2 rounded cursor-not-allowed text-sm">
                  Out of Stock
                </button>
              <% end %>
              
              <%= button_to "Remove", wishlist_remove_path(product), method: :delete, class: "bg-red-100 text-red-600 px-4 py-2 rounded hover:bg-red-200 text-sm" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @wishlist_items %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <p class="text-gray-600 text-lg mb-4">Your wishlist is empty</p>
      <p class="text-gray-500 mb-6">Save your favorite items for later!</p>
      <%= link_to "Browse Products", products_path, class: "bg-indigo-600 text-white px-6 py-3 rounded hover:bg-indigo-700 inline-block" %>
    </div>
  <% end %>
</div>
