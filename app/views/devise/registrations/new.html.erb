<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- Logo/Brand Section -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        <span class="text-purple-600">LUXE</span>CART
      </h1>
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Create your account</h2>
      <p class="text-gray-600">Join us for an amazing shopping experience</p>
    </div>

    <!-- Registration Form Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- First Name Field -->
        <div class="form-group">
          <%= f.label :first_name, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            First name
            <span class="text-red-500">*</span>
          <% end %>
          <%= f.text_field :first_name, autofocus: true, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 ease-in-out hover:border-gray-400",
              placeholder: "Enter your first name",
              required: true %>
        </div>

        <!-- Last Name Field -->
        <div class="form-group">
          <%= f.label :last_name, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Last name
            <span class="text-red-500">*</span>
          <% end %>
          <%= f.text_field :last_name, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 ease-in-out hover:border-gray-400",
              placeholder: "Enter your last name",
              required: true %>
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Email
            <span class="text-red-500">*</span>
          <% end %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 ease-in-out hover:border-gray-400",
              placeholder: "your.email@example.com",
              required: true %>
        </div>

        <!-- Password Field -->
        <div class="form-group">
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Password
            <span class="text-red-500">*</span>
            <% if @minimum_password_length %>
              <span class="text-xs font-normal text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 ease-in-out hover:border-gray-400",
              placeholder: "Create a secure password",
              required: true %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="form-group">
          <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Password confirmation
            <span class="text-red-500">*</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200 ease-in-out hover:border-gray-400",
              placeholder: "Re-enter your password",
              required: true %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Create account", 
              class: "w-full bg-gradient-to-r from-purple-600 to-purple-700 text-white font-semibold py-3 px-6 rounded-lg hover:from-purple-700 hover:to-purple-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transform transition duration-200 hover:scale-[1.02] active:scale-[0.98] shadow-lg cursor-pointer" %>
        </div>
      <% end %>

      <!-- Links Section -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="text-center space-y-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <!-- Footer Text -->
    <p class="text-center text-sm text-gray-600 mt-8">
      By creating an account, you agree to our 
      <a href="#" class="text-purple-600 hover:text-purple-700 font-medium">Terms of Service</a> 
      and 
      <a href="#" class="text-purple-600 hover:text-purple-700 font-medium">Privacy Policy</a>
    </p>
  </div>
</div>

<style>
  /* Additional custom styles for better UX */
  .form-group input:focus {
    box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.1);
  }
  
  .form-group input::placeholder {
    color: #9CA3AF;
  }
  
  /* Remove input autofill yellow background */
  .form-group input:-webkit-autofill,
  .form-group input:-webkit-autofill:hover,
  .form-group input:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
    transition: background-color 5000s ease-in-out 0s;
  }
</style>