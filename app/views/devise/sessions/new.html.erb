<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">

    <!-- Left: visual/marketing -->
    <div class="hidden lg:flex flex-col justify-center px-6">
      <div class="mb-6">
        <h2 class="text-4xl font-extrabold text-gray-900">Welcome back</h2>
        <p class="mt-3 text-lg text-gray-600">Sign in to continue shopping premium picks and manage your orders, wishlist and account settings.</p>
      </div>

      <div class="rounded-2xl overflow-hidden shadow-lg">
        <img src="https://images.unsplash.com/photo-1503602642458-232111445657?q=80&w=1400&auto=format&fit=crop" alt="Shop hero" class="w-full h-64 object-cover">
        <div class="p-6 bg-white">
          <h3 class="text-lg font-bold text-gray-900">New arrivals</h3>
          <p class="mt-2 text-sm text-gray-600">Discover our latest curated collection â€” beautifully made and sustainably sourced.</p>
          <div class="mt-4">
            <%= link_to "Browse products", products_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
          </div>
        </div>
      </div>

      <div class="mt-6 text-sm text-gray-500">
        <p>Not a member? <%= link_to 'Create an account', new_user_registration_path, class: 'text-indigo-600 hover:underline' %></p>
      </div>
    </div>

    <!-- Right: sign-in card -->
    <div class="bg-white py-8 px-6 shadow-md rounded-2xl border border-gray-100">
      <div class="mx-auto w-full max-w-md">
        <div class="flex items-center justify-center mb-6">
          <%= link_to root_path, class: "inline-flex items-center space-x-2" do %>
            <span class="inline-block bg-indigo-600 text-white rounded-full p-2" aria-hidden="true">
              <i class="fa-solid fa-gem"></i>
            </span>
            <span class="text-2xl font-extrabold text-gray-900">LuxeCart</span>
          <% end %>
        </div>

        <h2 class="text-2xl font-extrabold text-gray-900 text-center">Sign in to your account</h2>
        <p class="mt-2 text-sm text-gray-500 text-center">Enter your email and password to continue</p>

        <div class="mt-6">
          <%# Devise error messages and flash alerts %>
          <% if defined?(resource) && resource.errors.any? %>
            <div class="mb-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-700 text-sm" role="alert" aria-live="polite">
              <ul class="list-disc ml-5">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="mb-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-700 text-sm" role="alert" aria-live="polite"><%= flash[:alert] %></div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="space-y-4">
              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "appearance-none block w-full px-4 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
                </div>
              </div>

              <div>
                <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative">
                  <%= f.password_field :password, autocomplete: "current-password", required: true, id: "password-field", aria: { describedby: "password-help" }, class: "appearance-none block w-full px-4 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
                  <button type="button" id="toggle-password" class="absolute right-2 top-1/2 -translate-y-1/2 text-sm text-gray-500 hover:text-gray-700" aria-pressed="false" aria-label="Show password">
                    <i class="fa fa-eye" id="toggle-icon" aria-hidden="true"></i>
                  </button>
                </div>
                <p id="password-help" class="sr-only">Password must be at least 6 characters.</p>
              </div>

              <div class="flex items-center justify-between">
                <label class="flex items-center text-sm text-gray-600">
                  <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-200 rounded" %>
                  <span class="ml-2">Remember me</span>
                </label>

                <div class="text-sm">
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-indigo-600 hover:underline" %>
                </div>
              </div>

              <div>
                <%= f.submit "Sign in", class: "w-full inline-flex justify-center items-center px-4 py-2 bg-indigo-600 text-white rounded-md font-semibold hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
              </div>
            </div>
          <% end %>

          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-gray-500">Or continue with</span>
              </div>
            </div>

            <%# Only show OmniAuth buttons when Devise mapping is omniauthable %>
            <% if devise_mapping.omniauthable? %>
              <div class="mt-4 grid grid-cols-2 gap-3">
                <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "inline-flex items-center justify-center px-4 py-2 border rounded-md hover:bg-gray-50", aria: { label: "Continue with Facebook" } do %>
                  <i class="fab fa-facebook text-indigo-700 mr-2" aria-hidden="true"></i>
                  <span>Facebook</span>
                <% end %>

                <%= link_to omniauth_authorize_path(resource_name, :google_oauth2), class: "inline-flex items-center justify-center px-4 py-2 border rounded-md hover:bg-gray-50", aria: { label: "Continue with Google" } do %>
                  <i class="fab fa-google text-red-500 mr-2" aria-hidden="true"></i>
                  <span>Google</span>
                <% end %>
              </div>
            <% end %>

            <p class="mt-4 text-center text-sm text-gray-500">
              Don't have an account? <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-600 hover:underline" %>
            </p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const pw = document.getElementById('password-field');
    const toggle = document.getElementById('toggle-password');
    const icon = document.getElementById('toggle-icon');

    if (!toggle || !pw || !icon) return;

    // Initialize icon to eye (hidden)
    icon.classList.remove('fa-eye-slash');
    icon.classList.add('fa-eye');

    toggle.addEventListener('click', function() {
      const isHidden = pw.type === 'password';

      if (isHidden) {
        pw.type = 'text';
        // switch icon to eye-slash
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
        toggle.setAttribute('aria-pressed', 'true');
        toggle.setAttribute('aria-label', 'Hide password');
      } else {
        pw.type = 'password';
        // switch icon to eye
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
        toggle.setAttribute('aria-pressed', 'false');
        toggle.setAttribute('aria-label', 'Show password');
      }
    });
  });
</script>