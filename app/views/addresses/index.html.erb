<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold">My Addresses</h1>
    <%= link_to "Add New Address", new_address_path, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  </div>

  <% if @addresses.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @addresses.each do |address| %>
        <div class="bg-white rounded-lg shadow p-6 <%= address.is_default? ? 'border-2 border-indigo-600' : '' %>">
          <% if address.is_default? %>
            <span class="bg-indigo-600 text-white text-xs px-2 py-1 rounded mb-2 inline-block">Default</span>
          <% end %>
          
          <h3 class="font-semibold text-lg mb-2"><%= address.full_name %></h3>
          
          <div class="text-gray-600 text-sm space-y-1 mb-4">
            <p><%= address.street_address %></p>
            <% if address.apartment.present? %>
              <p><%= address.apartment %></p>
            <% end %>
            <p><%= address.city %>, <%= address.state %> <%= address.postal_code %></p>
            <p><%= address.country %></p>
            <p class="mt-2">Phone: <%= address.phone %></p>
            <% if address.address_type %>
              <p class="mt-2">
                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                  <%= address.address_type.titleize %>
                </span>
              </p>
            <% end %>
          </div>
          
          <div class="flex space-x-2 mt-4">
            <%= link_to "Edit", edit_address_path(address), class: "flex-1 text-center bg-gray-200 text-gray-700 px-3 py-2 rounded hover:bg-gray-300 text-sm" %>
            
            <% unless address.is_default? %>
              <%= button_to "Set Default", set_default_address_path(address), method: :patch, class: "flex-1 text-center bg-indigo-100 text-indigo-700 px-3 py-2 rounded hover:bg-indigo-200 text-sm" %>
            <% end %>
            
            <%= button_to "Delete", address_path(address), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-100 text-red-600 px-3 py-2 rounded hover:bg-red-200 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <p class="text-gray-600 text-lg mb-4">You haven't added any addresses yet</p>
      <%= link_to "Add Your First Address", new_address_path, class: "bg-indigo-600 text-white px-6 py-3 rounded hover:bg-indigo-700 inline-block" %>
    </div>
  <% end %>
</div>
