<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= content_for?(:title) ? yield(:title) : "Admin Login" %></title>

  <%= csrf_meta_tag %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 text-white min-h-screen">
  <% flash.each do |k,v| %>
    <div class="max-w-lg mx-auto mt-6 px-4">
      <div class="mb-4 px-4 py-3 rounded-lg border
                  <%= k.to_s == 'notice' ? 'border-emerald-700 bg-emerald-900/30 text-emerald-100' : 'border-red-700 bg-red-900/30 text-red-100' %>">
        <%= v %>
      </div>
    </div>
  <% end %>

  <main class="min-h-screen flex items-center justify-center px-4 py-10">
    <%= yield %>
  </main>
</body>
</html>