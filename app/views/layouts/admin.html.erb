<!DOCTYPE html>
<html>
  <head>
    <title>LuxeCart Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-gray-800 text-white min-h-screen p-4">
        <h1 class="text-2xl font-bold mb-8">LuxeCart Admin</h1>
        <nav class="space-y-2">
          <%= link_to "Dashboard", admin_root_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Products", admin_products_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Orders", admin_orders_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Categories", admin_categories_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Brands", admin_brands_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Users", admin_users_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <%= link_to "Reviews", admin_reviews_path, class: "block p-2 hover:bg-gray-700 rounded" %>
          <hr class="my-4 border-gray-600">
          <%= link_to "Back to Store", root_path, class: "block p-2 hover:bg-gray-700 rounded" %>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <% if notice.present? %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            <%= notice %>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <%= alert %>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
