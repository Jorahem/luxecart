<!DOCTYPE html>
<html>
  <head>
    <title>Admin - LuxeCart</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <div class="w-64 bg-gray-800 text-white">
        <div class="p-4">
          <%= link_to "LuxeCart Admin", admin_root_path, class: "text-2xl font-bold" %>
        </div>
        <nav class="mt-4">
          <%= link_to admin_root_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Dashboard
          <% end %>
          <%= link_to admin_products_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Products
          <% end %>
          <%= link_to admin_categories_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Categories
          <% end %>
          <%= link_to admin_orders_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Orders
          <% end %>
          <%= link_to admin_users_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Users
          <% end %>
          <%= link_to admin_reviews_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Reviews
          <% end %>
          <div class="border-t border-gray-700 my-4"></div>
          <%= link_to root_path, class: "block px-4 py-2 hover:bg-gray-700" do %>
            View Store
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "block px-4 py-2 hover:bg-gray-700" do %>
            Sign Out
          <% end %>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="flex-1 overflow-auto">
        <!-- Top Bar -->
        <div class="bg-white shadow">
          <div class="px-8 py-4">
            <h1 class="text-2xl font-semibold text-gray-800">
              <%= content_for?(:title) ? yield(:title) : "Admin Dashboard" %>
            </h1>
          </div>
        </div>

        <!-- Flash Messages -->
        <% flash.each do |name, msg| %>
          <div class="mx-8 mt-4">
            <div class="border-l-4 p-4 <%= flash_class(name) %>" role="alert">
              <p><%= msg %></p>
            </div>
          </div>
        <% end %>

        <!-- Content Area -->
        <div class="p-8">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
