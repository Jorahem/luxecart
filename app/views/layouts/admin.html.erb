<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= content_for?(:title) ? yield(:title) : "LuxeCart Admin" %></title>

  <%= csrf_meta_tag %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.min.css" />
  <!-- Tailwind CSS from CDN (kept same as your old file) -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 text-white min-h-screen">
  <!-- Admin Header (different from frontend navbar) -->
  <header class="border-b border-gray-800 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-indigo-600 flex items-center justify-center font-black">
          <i class="fas fa-user-shield"></i>
        </div>

        <div>
          <div class="font-extrabold tracking-tight text-white">
            LuxeCart Admin Panel
          </div>
          <div class="text-xs text-gray-400">
            Manage orders, products, customers
          </div>
        </div>
      </div>

      <nav class="flex items-center gap-2 text-sm">
        <%= link_to (admin_orders_path rescue "#"),
              class: "px-3 py-2 rounded-lg hover:bg-gray-800 bg-gray-800/40" do %>
          <i class="fas fa-receipt mr-2"></i> Orders
        <% end %>

        <%= link_to root_path,
              class: "px-3 py-2 rounded-lg bg-gray-800 hover:bg-gray-700" do %>
          <i class="fas fa-store mr-2"></i> Back to Store
        <% end %>
      </nav>
    </div>
  </header>

  <!-- âœ… Make the whole admin content area dark -->
  <main class="p-6 bg-gray-900 min-h-screen">
    <% flash.each do |k,v| %>
      <div class="mb-4 px-4 py-3 rounded-lg border
                  <%= k.to_s == 'notice' ? 'border-emerald-700 bg-emerald-900/30 text-emerald-100' : 'border-red-700 bg-red-900/30 text-red-100' %>">
        <%= v %>
      </div>
    <% end %>

    <%= yield %>
  </main>
</body>
</html>