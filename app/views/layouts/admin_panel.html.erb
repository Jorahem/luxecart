<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= content_for?(:title) ? yield(:title) : "LuxeCart Admin" %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Rails assets -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_importmap_tags %>

    <!-- Font Awesome & Tailwind (CDN fallback for admin) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Chart.js + Chartkick (Chart.js MUST be loaded before Chartkick) -->
    <!-- Load these synchronously (no defer) so inline Chartkick scripts in views run correctly -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartkick@5.2.1/dist/chartkick.min.js"></script>

    <script>
      // Flag for client-side login checks used by app JS
      window.currentUserLoggedIn = <%= (!!current_admin || !!current_user) ? 'true' : 'false' %>;
    </script>

    <style>
      /* Enhanced admin styles */
      .admin-shell { min-height: calc(100vh - 76px); }

      /* Smooth transitions */
      * { transition: all 0.2s ease; }

      /* Custom scrollbar */
      ::-webkit-scrollbar { width: 8px; height: 8px; }
      ::-webkit-scrollbar-track { background: rgba(0,0,0,0.1); }
      ::-webkit-scrollbar-thumb { background: rgba(99, 102, 241, 0.5); border-radius: 4px; }
      ::-webkit-scrollbar-thumb:hover { background: rgba(99, 102, 241, 0.7); }
    </style>
  </head>

  <body class="bg-gradient-to-br from-slate-50 via-indigo-50 to-purple-50 text-slate-900">

    <%# ========== ENHANCED TOPBAR ========== %>
    <header class="sticky top-0 z-50 border-b border-indigo-100 bg-white/95 backdrop-blur-md shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">

          <%# === LEFT: Logo & Brand === %>
          <div class="flex items-center gap-4">
            <%= link_to admin_dashboard_path, class: "flex items-center gap-3 group" do %>
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transform group-hover:scale-105 transition-all duration-200">
                <i class="fas fa-gem text-white text-lg"></i>
              </div>
              <div class="hidden sm:block">
                <div class="text-lg font-extrabold text-slate-900 tracking-tight">
                  LuxeCart
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold bg-gradient-to-r from-indigo-100 to-purple-100 text-indigo-700 border border-indigo-200">
                    ADMIN
                  </span>
                </div>
                <div class="text-[10px] text-slate-500 font-medium -mt-0.5">
                  Premium E-Commerce Platform
                </div>
              </div>
            <% end %>
          </div>

          <%# === RIGHT: Navigation === %>
          <nav class="flex items-center gap-2">
            <% 
              nav_base = "inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-semibold transition-all duration-200"
              nav_inactive = "text-slate-600 hover:text-indigo-600 hover:bg-indigo-50"
              nav_active = "text-white bg-gradient-to-r from-indigo-600 to-purple-600 shadow-md"
            %>

            <%= link_to admin_dashboard_path,
                  class: "#{nav_base} #{request.path == admin_dashboard_path ? nav_active : nav_inactive}" do %>
              <i class="fas fa-gauge-high"></i>
              <span class="hidden md:inline">Dashboard</span>
            <% end %>

            <%= link_to admin_orders_path,
                  class: "#{nav_base} #{request.path.start_with?('/admin/orders') ? nav_active : nav_inactive}" do %>
              <i class="fas fa-receipt"></i>
              <span class="hidden md:inline">Orders</span>
              <% if defined?(@unseen_order_count) && @unseen_order_count > 0 %>
                <span class="inline-flex items-center justify-center w-5 h-5 text-[10px] font-bold text-white bg-red-500 rounded-full animate-pulse ml-2">
                  <%= @unseen_order_count %>
                </span>
              <% end %>
            <% end %>

            <%= link_to admin_products_path,
                  class: "#{nav_base} #{request.path.start_with?('/admin/products') ? nav_active : nav_inactive}" do %>
              <i class="fas fa-box"></i>
              <span class="hidden md:inline">Products</span>
            <% end %>

            <%= link_to admin_contact_messages_path,
                  class: "#{nav_base} #{request.path.start_with?('/admin/contact_messages') ? nav_active : nav_inactive}" do %>
              <i class="fas fa-envelope"></i>
              <span class="hidden lg:inline">Messages</span>
            <% end %>

            <%# Divider %>
            <div class="hidden lg:block w-px h-8 bg-slate-200 mx-2"></div>

            <%# Store Button %>
            <%= link_to root_path,
                  target: "_blank",
                  class: "#{nav_base} bg-gradient-to-r from-emerald-500 to-teal-600 hover:from-emerald-600 hover:to-teal-700 text-black shadow-md hover:shadow-lg",
                  title: "Visit Store (opens in new tab)" do %>
              <i class="fas fa-store"></i>
              <span class="hidden lg:inline">Visit Store</span>
            <% end %>

            <%# Admin Profile Dropdown (optional) %>
            <div class="hidden lg:flex items-center gap-3 pl-3 ml-2 border-l border-slate-200">
              <div class="text-right">
                <div class="text-xs font-bold text-slate-900">
                  <%= current_admin&.email&.split('@')&.first&.capitalize || 'Admin' %>
                </div>
                <div class="text-[10px] text-slate-500">Administrator</div>
              </div>
              <div class="w-9 h-9 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center text-white font-bold text-sm shadow-md">
                <%= (current_admin&.email&.first || 'A').upcase %>
              </div>
            </div>

          </nav>

        </div>
      </div>

      <%# === MOBILE QUICK ACTIONS BAR === %>
      <div class="lg:hidden border-t border-indigo-100 bg-white/80 backdrop-blur">
        <div class="max-w-7xl mx-auto px-4 py-2 flex items-center gap-2 overflow-x-auto">
          <span class="text-[10px] font-bold text-slate-500 uppercase tracking-wide flex-shrink-0">Quick:</span>

          <%= link_to new_admin_product_path,
                class: "flex-shrink-0 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-indigo-50 text-indigo-700 text-xs font-semibold hover:bg-indigo-100" do %>
            <i class="fas fa-plus"></i>
            Product
          <% end %>

          <%= link_to new_admin_order_path,
                class: "flex-shrink-0 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-emerald-50 text-emerald-700 text-xs font-semibold hover:bg-emerald-100" do %>
            <i class="fas fa-plus"></i>
            Order
          <% end %>

          <%= link_to admin_users_path,
                class: "flex-shrink-0 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-purple-50 text-purple-700 text-xs font-semibold hover:bg-purple-100" do %>
            <i class="fas fa-users"></i>
            Users
          <% end %>
        </div>
      </div>
    </header>

    <%# ========== MAIN CONTENT AREA ========== %>
    <div class="admin-shell">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

        <%# Flash Messages %>
        <% flash.each do |k, v| %>
          <div class="mb-6 rounded-2xl border-2 px-5 py-4 text-sm font-medium shadow-lg animate-fade-in
            <%= k.to_s == 'notice' ? 'border-emerald-200 bg-gradient-to-r from-emerald-50 to-teal-50 text-emerald-800' : 'border-rose-200 bg-gradient-to-r from-rose-50 to-red-50 text-rose-800' %>">
            <div class="flex items-start gap-3">
              <div class="mt-0.5">
                <% if k.to_s == "notice" %>
                  <i class="fas fa-check-circle text-emerald-600 text-lg"></i>
                <% else %>
                  <i class="fas fa-exclamation-triangle text-rose-600 text-lg"></i>
                <% end %>
              </div>
              <div class="flex-1">
                <div class="font-bold mb-1"><%= k.to_s.capitalize %></div>
                <div class="text-sm"><%= v %></div>
              </div>
              <button onclick="this.parentElement.parentElement.remove()" class="text-slate-400 hover:text-slate-600">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
        <% end %>

        <%# Page Content %>
        <%= yield %>
      </div>
    </div>

    <%# ========== FOOTER ========== %>
    <footer class="border-t border-indigo-100 bg-white/80 backdrop-blur mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="text-sm text-slate-600">
            <span class="font-bold text-slate-900">LuxeCart Admin</span>
            <span class="mx-2">•</span>
            <%= Time.current.year %>
            <span class="mx-2">•</span>
            <span class="text-indigo-600 font-semibold">Premium E-Commerce</span>
          </div>
          <div class="flex items-center gap-4 text-xs text-slate-500">
            <%= link_to admin_dashboard_path, class: "hover:text-indigo-600 font-medium" do %>
              <i class="fas fa-question-circle mr-1"></i>Help
            <% end %>
            <span class="text-slate-300">|</span>
            <%= link_to admin_dashboard_path, class: "hover:text-indigo-600 font-medium" do %>
              <i class="fas fa-cog mr-1"></i>Settings
            <% end %>
            <span class="text-slate-300">|</span>
            <%= link_to "Logout", admin_logout_path, method: :delete, data: { confirm: "Logout?" }, class: "hover:text-rose-600 font-medium" %>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>