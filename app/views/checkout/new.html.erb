<div style="max-width: 800px; margin: 0 auto;">
  <h1 class="section-title">Checkout</h1>
  
  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
    <div>
      <div style="background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <h2 style="margin-bottom: 20px; color: #2c3e50;">Order Details</h2>
        
        <%= form_with model: @order, url: checkout_path, method: :post, local: true do |f| %>
          <% if @order.errors.any? %>
            <div class="alert alert-error" style="margin-bottom: 20px;">
              <h4 style="margin-bottom: 10px;">Please fix the following errors:</h4>
              <ul style="margin-left: 20px;">
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="form-group">
            <label class="form-label">Payment Method</label>
            <%= f.select :payment_method, 
                [['Cash on Delivery', 'cash_on_delivery'], ['Credit Card', 'credit_card']], 
                {}, 
                class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="form-label">Order Notes (Optional)</label>
            <%= f.text_area :notes, rows: 4, class: 'form-control', placeholder: 'Any special instructions for your order?' %>
          </div>
          
          <div style="margin-top: 30px;">
            <%= f.submit 'Place Order', class: 'btn btn-primary', style: 'width: 100%; font-size: 18px; padding: 15px;' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div>
      <div style="background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <h2 style="margin-bottom: 20px; color: #2c3e50;">Order Summary</h2>
        
        <div style="max-height: 300px; overflow-y: auto; margin-bottom: 20px;">
          <% @cart.cart_items.each do |item| %>
            <div style="display: flex; gap: 15px; margin-bottom: 15px; padding-bottom: 15px; border-bottom: 1px solid #ecf0f1;">
              <% if item.product.images.attached? && item.product.images.first %>
                <%= image_tag item.product.images.first, style: 'width: 60px; height: 60px; object-fit: cover; border-radius: 4px;', alt: item.product.name %>
              <% else %>
                <div style="width: 60px; height: 60px; background: #ecf0f1; border-radius: 4px; display: flex; align-items: center; justify-content: center; font-size: 20px;">
                  ðŸ“¦
                </div>
              <% end %>
              <div style="flex: 1;">
                <strong style="display: block; margin-bottom: 5px;"><%= item.product.name %></strong>
                <span style="color: #7f8c8d; font-size: 14px;">Qty: <%= item.quantity %> Ã— $<%= number_with_precision(item.product.price, precision: 2) %></span>
              </div>
              <strong style="color: #e74c3c;">$<%= number_with_precision(item.product.price * item.quantity, precision: 2) %></strong>
            </div>
          <% end %>
        </div>
        
        <div style="border-top: 2px solid #ecf0f1; padding-top: 20px;">
          <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
            <span>Subtotal (<%= @cart.total_items %> items):</span>
            <strong>$<%= number_with_precision(@cart.subtotal, precision: 2) %></strong>
          </div>
          
          <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
            <span>Tax (10%):</span>
            <strong>$<%= number_with_precision(@cart.subtotal * 0.10, precision: 2) %></strong>
          </div>
          
          <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
            <span>Shipping:</span>
            <strong>$9.99</strong>
          </div>
          
          <div style="display: flex; justify-content: space-between; padding-top: 20px; border-top: 2px solid #2c3e50; font-size: 20px;">
            <strong>Total:</strong>
            <strong style="color: #e74c3c;">$<%= number_with_precision(@cart.subtotal + (@cart.subtotal * 0.10) + 9.99, precision: 2) %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
