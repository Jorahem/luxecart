<div class="space-y-6">
  <h1 class="text-3xl font-bold">Brands</h1>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @brands.each do |brand| %>
      <%= link_to brand_path(brand), class: "bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow" do %>
        <div class="text-center">
          <h3 class="font-semibold text-lg mb-2"><%= brand.name %></h3>
          <p class="text-gray-600 text-sm"><%= brand.products_count %> products</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
