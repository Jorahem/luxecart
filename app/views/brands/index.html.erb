<h1 class="section-title">Shop by Brand</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px;">
  <% Brand.where(active: true).each do |brand| %>
    <a href="<%= brand_path(brand) %>" style="text-decoration: none;">
      <div class="brand-hover-card" style="background: #fff; padding: 40px; border-radius: 8px; text-align: center; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: all 0.3s; color: #2c3e50;">
        <div style="font-size: 48px; margin-bottom: 15px;">ğŸ·ï¸</div>
        <h3 style="font-size: 20px; font-weight: 600; margin-bottom: 10px;"><%= brand.name %></h3>
        <% if brand.description.present? %>
          <p style="color: #7f8c8d; font-size: 14px;"><%= truncate(brand.description, length: 100) %></p>
        <% end %>
        <% if brand.website.present? %>
          <p style="color: #3498db; font-size: 12px; margin-top: 10px;">ğŸŒ <%= brand.website %></p>
        <% end %>
      </div>
    </a>
  <% end %>
</div>
