<!-- Contact page: hero, contact cards, form, map, FAQ -->
<section class="bg-gradient-to-b from-white to-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div>
        <p class="text-sm font-semibold text-indigo-600">Get in touch</p>
        <h1 class="mt-4 text-4xl sm:text-5xl font-extrabold text-gray-900 leading-tight">
          We're here to help — let's make something beautiful together
        </h1>
        <p class="mt-6 text-lg text-gray-600 max-w-xl">
          Have a question about an order, partnership, or a product? Send us a message and our team will respond within 24 hours.
        </p>

        <div class="mt-8 flex flex-wrap gap-3">
          <a href="#contact-form" class="inline-flex items-center px-5 py-3 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition">
            <i class="fa-solid fa-paper-plane mr-3"></i> Send a message
          </a>

          <a href="#locations" class="inline-flex items-center px-5 py-3 bg-white border rounded-lg text-gray-700 hover:bg-gray-50 transition">
            <i class="fa-solid fa-map-marker-alt mr-3"></i> Our locations
          </a>
        </div>
      </div>

      <div class="w-full">
        <div class="rounded-2xl overflow-hidden shadow-lg ring-1 ring-gray-100">
          <img src="https://images.unsplash.com/photo-1763872011479-aa293bf083a8?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGUtY29tbWVyY2V8ZW58MHx8MHx8fDA%3D" alt="Support team" class="w-full h-64 object-cover">
        </div>
      </div>
    </div>

    <!-- Contact cards -->
    <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-indigo-50 rounded-full flex items-center justify-center text-indigo-600">
            <i class="fa-solid fa-phone"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">Call Us</p>
            <p class="font-semibold text-gray-900">+1 (555) 123-4567</p>
            <p class="text-xs text-gray-400">Mon–Fri, 9am–6pm</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-indigo-50 rounded-full flex items-center justify-center text-indigo-600">
            <i class="fa-solid fa-envelope"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">Email</p>
            <p class="font-semibold text-gray-900">support@luxecart.example</p>
            <p class="text-xs text-gray-400">Typical reply in 24 hours</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-indigo-50 rounded-full flex items-center justify-center text-indigo-600">
            <i class="fa-solid fa-headset"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">Support</p>
            <p class="font-semibold text-gray-900">Live chat & help center</p>
            <p class="text-xs text-gray-400">Available 24/7</p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-12 grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Contact form -->
      <div id="contact-form" class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900">Send us a message</h2>
        <p class="mt-2 text-sm text-gray-600">Tell us about your inquiry and we'll get back to you soon.</p>

        <% if flash[:notice] %>
          <div class="mt-4 rounded-md bg-green-50 border border-green-100 p-3 text-green-700"><%= flash[:notice] %></div>
        <% elsif flash[:alert] %>
          <div class="mt-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-700"><%= flash[:alert] %></div>
        <% end %>

        <div class="mt-6">
          <%= form_with url: contact_submit_path, method: :post, local: true, html: { class: "space-y-4" } do |f| %>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= f.label :name, "Full name", class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :name, name: "contact[name]", required: true, class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>

              <div>
                <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
                <%= f.email_field :email, name: "contact[email]", required: true, class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>
            </div>

            <div>
              <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :subject, name: "contact[subject]", class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :message, name: "contact[message]", rows: 6, required: true, class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div class="flex items-center justify-between gap-4">
              <div class="flex items-center space-x-3">
                <input id="newsletter" name="contact[newsletter]" type="checkbox" class="h-4 w-4 text-indigo-600 rounded">
                <label for="newsletter" class="text-sm text-gray-600">Subscribe to newsletter</label>
              </div>

              <div class="text-sm text-gray-500">We respect your privacy. <%= link_to 'Privacy policy', privacy_path, class: 'text-indigo-600 hover:underline' %></div>
            </div>

            <div class="pt-4">
              <%= f.submit "Send message", class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar: offices + map + social -->
      <aside class="space-y-6">
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900">Our offices</h3>
          <div class="mt-4 space-y-4">
            <div>
              <p class="text-sm text-gray-500">Headquarters</p>
              <p class="font-semibold text-gray-900">123 Luxe Street, Suite 200<br/>San Francisco, CA</p>
              <p class="text-sm text-gray-500 mt-1">Mon–Fri 9am–6pm</p>
            </div>

            <div>
              <p class="text-sm text-gray-500">Europe</p>
              <p class="font-semibold text-gray-900">10 Avenue, London</p>
              <p class="text-sm text-gray-500 mt-1">Mon–Fri 9am–5pm (GMT)</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900 mb-3">Find us</h3>

          <!-- Responsive embed map (replace src with your location if desired) -->
          <div class="w-full h-48 overflow-hidden rounded-lg">
            <iframe class="w-full h-full border-0" loading="lazy"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.0197994365485!2d-122.40135028468135!3d37.79362121975683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80858064a6f0e0a1%3A0x1b2b3c4d5e6f7a8b!2sSan%20Francisco%2C%20CA!5e0!3m2!1sen!2sus!4v0000000000000"
              allowfullscreen="" referrerpolicy="no-referrer-when-downgrade" aria-hidden="false" tabindex="0"></iframe>
          </div>

          <div class="mt-4 flex items-center gap-3">
            <a href="#" class="text-gray-400 hover:text-indigo-600"><i class="fab fa-facebook-f"></i><span class="sr-only">Facebook</span></a>
            <a href="#" class="text-gray-400 hover:text-indigo-600"><i class="fab fa-instagram"></i><span class="sr-only">Instagram</span></a>
            <a href="#" class="text-gray-400 hover:text-indigo-600"><i class="fab fa-twitter"></i><span class="sr-only">Twitter</span></a>
            <a href="#" class="text-gray-400 hover:text-indigo-600"><i class="fab fa-linkedin-in"></i><span class="sr-only">LinkedIn</span></a>
          </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900">Need help now?</h3>
          <p class="mt-2 text-sm text-gray-600">Use live chat in the bottom-right corner or call our support line for orders and returns.</p>
          <a href="<%= new_user_session_path %>" class="mt-4 block text-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Start live chat</a>
        </div>
      </aside>
    </div>

    <!-- FAQ -->
    <div class="mt-12 bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
      <h3 class="text-2xl font-bold text-gray-900">Frequently asked</h3>
      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
        <details class="p-4 bg-gray-50 rounded-lg">
          <summary class="font-semibold cursor-pointer">How long does shipping take?</summary>
          <p class="mt-2 text-sm text-gray-600">Standard shipping usually takes 3–7 business days, depending on your location.</p>
        </details>

        <details class="p-4 bg-gray-50 rounded-lg">
          <summary class="font-semibold cursor-pointer">How do returns work?</summary>
          <p class="mt-2 text-sm text-gray-600">We offer a 30-day returns policy. Visit our Returns page for details and the return form.</p>
        </details>

        <details class="p-4 bg-gray-50 rounded-lg">
          <summary class="font-semibold cursor-pointer">Do you support wholesale?</summary>
          <p class="mt-2 text-sm text-gray-600">Yes — contact partnerships@luxecart.example for wholesale inquiries.</p>
        </details>

        <details class="p-4 bg-gray-50 rounded-lg">
          <summary class="font-semibold cursor-pointer">Is checkout secure?</summary>
          <p class="mt-2 text-sm text-gray-600">Yes — we use Stripe for payments and follow industry best practices for security.</p>
        </details>
      </div>
    </div>
  </div>
</section>

<!-- Minimal client-side enhancement: simple form validation before submit -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('#contact-form form');
    if (!form) return;

    form.addEventListener('submit', function(e) {
      const name = form.querySelector('input[name="contact[name]"]');
      const email = form.querySelector('input[name="contact[email]"]');
      const message = form.querySelector('textarea[name="contact[message]"]');

      let errors = [];

      if (!name || !name.value.trim()) errors.push('Please enter your name.');
      if (!email || !/^\S+@\S+\.\S+$/.test(email.value || '')) errors.push('Please enter a valid email address.');
      if (!message || !message.value.trim()) errors.push('Please write a message.');

      if (errors.length > 0) {
        e.preventDefault();
        alert(errors.join('\\n'));
        return false;
      }

      // allow submit
      return true;
    });
  });
</script>