<% content_for :title, "Edit Category" %>

<div class="max-w-2xl">
  <h2 class="text-2xl font-bold mb-6">Edit Category</h2>

  <%= form_with(model: [:admin, @category], class: "space-y-6") do |f| %>
    <% if @category.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :parent_category_id, "Parent Category (Optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :parent_category_id, @parent_categories, :id, :name, { include_blank: 'None (Root Category)' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :active, class: "rounded border-gray-300" %>
      <%= f.label :active, class: "ml-2 text-sm font-medium text-gray-700" %>
    </div>

    <div class="flex space-x-4">
      <%= f.submit "Update Category", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
      <%= link_to "Cancel", admin_categories_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
