<% content_for :title, "User Details" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-bold"><%= @user.full_name %></h2>
    <%= link_to "Back to Users", admin_users_path, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>

  <!-- User Info -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">User Information</h3>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-600">Name</p>
        <p class="font-medium"><%= @user.full_name %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Email</p>
        <p class="font-medium"><%= @user.email %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Role</p>
        <p class="font-medium"><%= @user.role || 'customer' %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Member Since</p>
        <p class="font-medium"><%= @user.created_at.strftime('%B %d, %Y') %></p>
      </div>
    </div>
  </div>

  <!-- Recent Orders -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Recent Orders</h3>
    <% if @orders.any? %>
      <table class="min-w-full">
        <thead class="border-b">
          <tr>
            <th class="text-left py-2">Order #</th>
            <th class="text-left py-2">Date</th>
            <th class="text-left py-2">Status</th>
            <th class="text-right py-2">Total</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="border-b">
              <td class="py-2">
                <%= link_to order.order_number, admin_order_path(order), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
              <td class="py-2"><%= order.created_at.strftime('%B %d, %Y') %></td>
              <td class="py-2"><%= status_badge(order.status) %></td>
              <td class="text-right py-2"><%= currency_format(order.total_price) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-500">No orders yet</p>
    <% end %>
  </div>
</div>
