<% content_for :title, "Edit Product" %>

<div class="max-w-2xl">
  <h2 class="text-2xl font-bold mb-6">Edit Product</h2>

  <%= form_with(model: [:admin, @product], class: "space-y-6") do |f| %>
    <% if @product.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :sale_price, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :sale_price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :sku, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :sku, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :stock_quantity, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :stock_quantity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :category_id, class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :category_id, @categories, :id, :name, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :brand_id, class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :brand_id, @brands, :id, :name, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div class="flex items-center space-x-4">
      <div class="flex items-center">
        <%= f.check_box :active, class: "rounded border-gray-300" %>
        <%= f.label :active, class: "ml-2 text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-center">
        <%= f.check_box :featured, class: "rounded border-gray-300" %>
        <%= f.label :featured, class: "ml-2 text-sm font-medium text-gray-700" %>
      </div>
    </div>

    <div class="flex space-x-4">
      <%= f.submit "Update Product", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
      <%= link_to "Cancel", admin_products_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
