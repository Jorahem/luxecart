<% content_for :title, "Order #{@order.order_number}" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-bold">Order #<%= @order.order_number %></h2>
    <%= link_to "Back to Orders", admin_orders_path, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>

  <!-- Order Info -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Order Information</h3>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-600">Customer</p>
        <p class="font-medium"><%= @order.user.full_name %></p>
        <p class="text-sm text-gray-600"><%= @order.user.email %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Order Date</p>
        <p class="font-medium"><%= @order.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Status</p>
        <p class="mt-1"><%= status_badge(@order.status) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Payment Status</p>
        <p class="mt-1">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @order.paid? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
            <%= @order.payment_status.titleize %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <!-- Order Items -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Order Items</h3>
    <table class="min-w-full">
      <thead class="border-b">
        <tr>
          <th class="text-left py-2">Product</th>
          <th class="text-center py-2">Quantity</th>
          <th class="text-right py-2">Unit Price</th>
          <th class="text-right py-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |item| %>
          <tr class="border-b">
            <td class="py-2"><%= item.product.name %></td>
            <td class="text-center py-2"><%= item.quantity %></td>
            <td class="text-right py-2"><%= currency_format(item.unit_price) %></td>
            <td class="text-right py-2"><%= currency_format(item.quantity * item.unit_price) %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot class="border-t">
        <tr>
          <td colspan="3" class="text-right py-2 font-semibold">Total:</td>
          <td class="text-right py-2 font-semibold"><%= currency_format(@order.total_price) %></td>
        </tr>
      </tfoot>
    </table>
  </div>

  <!-- Update Status -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Update Order Status</h3>
    <%= form_with url: update_status_admin_order_path(@order), method: :patch, class: "flex items-center space-x-4" do |f| %>
      <%= select_tag :status, options_for_select(Order.statuses.keys.map { |s| [s.titleize, s] }, @order.status), class: "rounded-md border-gray-300" %>
      <%= f.submit "Update Status", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
    <% end %>
  </div>
</div>
