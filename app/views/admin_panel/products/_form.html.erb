<%= form_with model: [:admin, @product], local: true do |f| %>
  <div class="space-y-5">
    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Name</label>
      <%= f.text_field :name, class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Description</label>
      <%= f.text_area :description, rows: 4, class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Price</label>
        <%= f.number_field :price, step: "0.01", class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Stock</label>
        <%= f.number_field :stock, class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">SKU</label>
        <%= f.text_field :sku, class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Image URL</label>
        <%= f.text_field :image_url, class: "w-full px-4 py-3 rounded-xl bg-[#0B1220] border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit class: "px-5 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow" %>

      <%= link_to "Cancel",
            admin_products_path,
            class: "px-5 py-3 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 text-sm font-semibold text-white" %>
    </div>
  </div>
<% end %>