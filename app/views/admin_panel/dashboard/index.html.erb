<div class="min-h-screen bg-gradient-to-br from-indigo-900 via-indigo-950 to-pink-900/80 text-gray-100">
  <%# --- Topbar --- %>
  <div class="flex flex-row items-center justify-between px-8 pt-7 pb-5 border-b border-white/10 shadow-lg bg-gradient-to-r from-indigo-900/50 via-indigo-900/70 to-blue-950/60">
    <div class="font-extrabold text-xl tracking-tight flex flex-row items-center gap-3">
      <i class="fa-solid fa-gem text-pink-400 text-3xl drop-shadow"></i>
      <span class="text-white">LuxeCart Admin</span>
      <span class="ml-2 text-xs font-semibold px-3 py-1 rounded-full bg-gradient-to-r from-pink-500 to-indigo-600/80 border border-white/10 text-white shadow">Dashboard</span>
    </div>
    <div class="flex flex-row items-center gap-4">
      <div class="relative hidden sm:block">
        <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-pink-200 text-base"></i>
        <input
          class="w-80 bg-white/10 border border-pink-200/20 rounded-xl py-2 pl-10 pr-3 text-base text-white shadow placeholder:text-pink-200/80 focus:ring focus:ring-pink-400/30 focus:outline-none"
          placeholder="Search orders, users, products..."
        />
      </div>
      <button class="relative h-10 w-10 grid place-items-center rounded-xl bg-indigo-950/50 border border-pink-400/30 text-pink-200 hover:bg-pink-500/10 shadow">
        <i class="fa-solid fa-bell"></i>
        <span class="absolute -top-1 -right-1 h-4 w-4 rounded-full bg-rose-500 text-[10px] grid place-items-center border border-indigo-950">!</span>
      </button>
      <div class="flex items-center gap-2 rounded-xl bg-indigo-900/50 border border-indigo-500/20 px-4 py-2">
        <i class="fa-solid fa-user-shield text-pink-400"></i>
        <span class="text-base font-bold text-white"><%= current_admin&.email || "Admin" %></span>
      </div>
    </div>
  </div>

  <div class="flex">
    <!-- Sidebar -->
    <aside class="hidden lg:flex flex-col w-64 min-h-[calc(100vh-80px)] bg-gradient-to-b from-indigo-950/80 to-indigo-900/80 border-r border-pink-300/10 p-5">
      <nav class="flex flex-col gap-2 text-white">
        <%= link_to admin_dashboard_path,
          class: "flex items-center gap-3 px-4 py-3 rounded-xl bg-gradient-to-r from-pink-600 via-indigo-600 to-blue-700 border border-white/10 shadow text-white font-bold" do %>
          <i class="fa-solid fa-gauge-high text-yellow-300 drop-shadow"></i><span>Dashboard</span>
        <% end %>
        <%= link_to admin_orders_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-receipt text-indigo-300"></i> <span>Orders</span>
        <% end %>
        <%= link_to admin_products_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-box text-pink-400"></i> <span>Products</span>
        <% end %>
        <%= link_to admin_categories_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-list text-gray-200"></i><span>Categories</span>
        <% end %>
        <%= link_to admin_users_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-users text-blue-300"></i><span>Customers</span>
        <% end %>
        <%= link_to admin_contact_messages_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-envelope text-indigo-300"></i> <span>Contact</span>
        <% end %>
        <%= link_to admin_payments_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-credit-card text-fuchsia-300"></i> <span>Payments</span>
        <% end %>
        <%= link_to admin_reports_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 transition" do %>
          <i class="fa-solid fa-chart-line text-emerald-300"></i> <span>Reports</span>
        <% end %>
      </nav>

      <!-- Quick actions -->
      <div class="mt-7 p-4 rounded-2xl bg-gradient-to-br from-pink-600/30 via-indigo-900/30 to-blue-700/30 border border-white/10 shadow">
        <div class="flex items-center justify-between">
          <div class="text-sm font-bold text-white">Quick Actions</div>
          <span class="text-xs text-pink-100">Shortcuts</span>
        </div>
        <div class="mt-4 flex flex-col gap-2">
          <%= link_to new_admin_product_path, class: "px-3 py-2 rounded-xl bg-indigo-900/90 hover:bg-pink-600/40 border border-pink-500/30 text-sm flex items-center justify-between font-bold text-pink-200" do %>
            <span><i class="fa-solid fa-plus mr-2 text-emerald-300"></i>Add Product</span>
            <i class="fa-solid fa-arrow-right text-pink-100"></i>
          <% end %>
          <%= link_to admin_orders_path, class: "px-3 py-2 rounded-xl bg-indigo-900/90 hover:bg-indigo-700/50 border border-indigo-500/30 text-sm flex items-center justify-between font-bold text-indigo-100" do %>
            <span><i class="fa-solid fa-receipt mr-2 text-indigo-200"></i>View Orders</span>
            <i class="fa-solid fa-arrow-right text-pink-100"></i>
          <% end %>
          <%= link_to admin_coupons_path, class: "px-3 py-2 rounded-xl bg-indigo-900/90 hover:bg-pink-600/40 border border-pink-500/30 text-sm flex items-center justify-between font-bold text-pink-200" do %>
            <span><i class="fa-solid fa-ticket mr-2 text-fuchsia-300"></i>Coupons</span>
            <i class="fa-solid fa-arrow-right text-pink-100"></i>
          <% end %>
        </div>
      </div>

      <!-- Help -->
      <div class="mt-5 p-4 rounded-2xl bg-gradient-to-br from-indigo-900/70 to-indigo-800/60 border border-indigo-500/20 shadow">
        <div class="flex items-start gap-3">
          <div class="h-10 w-10 rounded-xl bg-pink-400/10 grid place-items-center border border-pink-300/30">
            <i class="fa-solid fa-circle-question text-pink-400"></i>
          </div>
          <div class="min-w-0">
            <div class="text-sm font-bold text-white">Need help?</div>
            <div class="text-xs text-pink-100 mt-1">
              ✔️ Check low stock, review failed payments, watch pending orders.
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-8">
      <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-5">
        <div>
          <h1 class="text-3xl font-extrabold text-white drop-shadow tracking-tight">Dashboard Overview</h1>
          <p class="text-base text-pink-100 mt-2">Key metrics, recent activity, and store health result.</p>
        </div>
        <div class="flex gap-2">
          <span class="text-xs px-4 py-2 rounded-xl bg-gradient-to-r from-indigo-800 to-pink-700 text-white border border-pink-500/20 font-bold shadow">
            <i class="fa-regular fa-calendar mr-2"></i>
            <%= Time.zone.now.strftime("%A, %d %b %Y") %>
          </span>
          <%= link_to admin_reports_path, class: "text-xs px-4 py-2 rounded-xl bg-pink-500/70 border border-pink-200/30 text-white font-bold hover:bg-pink-600 transition" do %>
            <i class="fa-solid fa-chart-line mr-2"></i> Reports
          <% end %>
        </div>
      </div>

      <!-- KPI Cards -->
      <section class="mt-8 grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">
        <div class="rounded-2xl bg-gradient-to-br from-indigo-900/70 via-indigo-800/90 to-pink-900/50 border border-indigo-500/20 p-6 relative overflow-hidden shadow-lg">
          <div class="absolute -top-10 -right-10 h-32 w-32 bg-indigo-600/30 blur-3xl" style="z-index:0"></div>
          <div class="flex items-center justify-between relative z-10">
            <div class="text-sm text-indigo-200 font-semibold">Total Orders</div>
            <div class="h-10 w-10 rounded-xl bg-indigo-500/30 grid place-items-center">
              <i class="fa-solid fa-bag-shopping text-indigo-200"></i>
            </div>
          </div>
          <div class="mt-5 text-4xl font-black text-white z-10 drop-shadow"><%= (@total_orders || 0) %></div>
          <div class="mt-3 text-xs text-pink-200">All-time</div>
        </div>
        <div class="rounded-2xl bg-gradient-to-br from-pink-500/30 via-pink-900/40 to-indigo-800/30 border border-pink-400/20 p-6 relative overflow-hidden shadow-lg">
          <div class="absolute -top-10 -right-10 h-32 w-32 bg-pink-500/30 blur-3xl" style="z-index:0"></div>
          <div class="flex items-center justify-between relative z-10">
            <div class="text-sm text-pink-200 font-semibold">Revenue</div>
            <div class="h-10 w-10 rounded-xl bg-pink-400/20 grid place-items-center">
              <i class="fa-solid fa-coins text-pink-200"></i>
            </div>
          </div>
          <div class="mt-5 text-4xl font-black text-white drop-shadow"><%= number_to_currency((@total_revenue || 0)) %></div>
          <div class="mt-3 text-xs text-pink-200">All-time</div>
        </div>
        <div class="rounded-2xl bg-gradient-to-br from-amber-200/40 via-yellow-400/10 to-pink-900/70 border border-yellow-300/10 p-6 relative overflow-hidden shadow-lg">
          <div class="absolute -top-10 -right-10 h-32 w-32 bg-yellow-400/40 blur-3xl" style="z-index:0"></div>
          <div class="flex items-center justify-between relative z-10">
            <div class="text-sm text-yellow-200 font-semibold">Orders Today</div>
            <div class="h-10 w-10 rounded-xl bg-yellow-400/30 grid place-items-center">
              <i class="fa-solid fa-bolt text-yellow-200"></i>
            </div>
          </div>
          <div class="mt-5 text-4xl font-black text-white drop-shadow"><%= (@orders_today || 0) %></div>
          <div class="mt-3 text-xs text-pink-200">Since midnight</div>
        </div>
        <div class="rounded-2xl bg-gradient-to-br from-pink-500/20 via-fuchsia-700/40 to-indigo-900/60 border border-fuchsia-300/20 p-6 relative overflow-hidden shadow-lg">
          <div class="absolute -top-10 -right-10 h-32 w-32 bg-pink-300/30 blur-3xl" style="z-index:0"></div>
          <div class="flex items-center justify-between relative z-10">
            <div class="text-sm text-fuchsia-200 font-semibold">Customers</div>
            <div class="h-10 w-10 rounded-xl bg-fuchsia-600/20 grid place-items-center">
              <i class="fa-solid fa-user-group text-fuchsia-100"></i>
            </div>
          </div>
          <div class="mt-5 text-4xl font-black text-white drop-shadow"><%= (@total_users || 0) %></div>
          <div class="mt-3 text-xs text-pink-200">Registered users</div>
        </div>
      </section>

      <!-- Quick Insights Row -->
      <section class="mt-8 grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Admin tips -->
        <div class="rounded-2xl bg-gradient-to-br from-indigo-900/60 via-indigo-800/70 to-pink-900/40 border border-indigo-500/10 p-6 shadow">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-bold text-white">Admin Tips</div>
              <div class="text-xs text-pink-200 mt-2">Your daily checklist</div>
            </div>
            <i class="fa-solid fa-lightbulb text-amber-200"></i>
          </div>
          <ul class="mt-4 text-sm text-indigo-100 space-y-2">
            <li><i class="fa-solid fa-circle-check text-emerald-300 mr-2"></i>Check pending orders</li>
            <li><i class="fa-solid fa-circle-check text-emerald-300 mr-2"></i>Review low stock products</li>
            <li><i class="fa-solid fa-circle-check text-emerald-300 mr-2"></i>Verify failed payments</li>
          </ul>
        </div>

        <!-- Shortcuts -->
        <div class="rounded-2xl bg-gradient-to-br from-pink-900/40 via-indigo-950/80 to-indigo-900/60 border border-pink-500/20 p-6 shadow">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-bold text-white">Shortcuts</div>
              <div class="text-xs text-pink-200 mt-2">Go fast</div>
            </div>
            <i class="fa-solid fa-bolt text-yellow-300"></i>
          </div>
          <div class="mt-4 grid grid-cols-2 gap-3">
            <%= link_to admin_orders_path, class: "px-3 py-2 rounded-xl bg-indigo-900/80 hover:bg-pink-700/60 border border-pink-500/20 text-sm text-center font-bold text-pink-100" do %>
              <i class="fa-solid fa-receipt mr-2 text-indigo-200"></i>Orders
            <% end %>
            <%= link_to admin_products_path, class: "px-3 py-2 rounded-xl bg-indigo-900/80 hover:bg-pink-700/60 border border-pink-500/20 text-sm text-center font-bold text-pink-100" do %>
              <i class="fa-solid fa-box mr-2 text-pink-200"></i>Products
            <% end %>
            <%= link_to admin_users_path, class: "px-3 py-2 rounded-xl bg-indigo-900/80 hover:bg-pink-700/60 border border-pink-500/20 text-sm text-center font-bold text-pink-100" do %>
              <i class="fa-solid fa-users mr-2 text-blue-200"></i>Users
            <% end %>
            <%= link_to admin_reports_path, class: "px-3 py-2 rounded-xl bg-indigo-900/80 hover:bg-pink-700/60 border border-pink-500/20 text-sm text-center font-bold text-pink-100" do %>
              <i class="fa-solid fa-chart-line mr-2 text-emerald-200"></i>Reports
            <% end %>
          </div>
        </div>

        <!-- Store health -->
        <div class="rounded-2xl bg-gradient-to-br from-pink-800/30 to-indigo-900/50 border border-pink-300/20 p-6 shadow">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-bold text-white">Store Health</div>
              <div class="text-xs text-pink-200 mt-2">Quick status</div>
            </div>
            <i class="fa-solid fa-heart-pulse text-rose-200"></i>
          </div>
          <% pending_count = defined?(@pending_orders_count) ? @pending_orders_count : nil %>
          <% low_stock_count = @low_stock_products.respond_to?(:size) ? @low_stock_products.size : 0 %>
          <div class="mt-5 space-y-4 text-sm">
            <div class="flex items-center justify-between">
              <span class="text-indigo-100">Pending orders</span>
              <span class="px-3 py-1 rounded-full bg-yellow-400/15 text-yellow-200 border border-yellow-300/30 text-xs font-bold">
                <%= pending_count.nil? ? "N/A" : pending_count %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-indigo-100">Low stock items</span>
              <span class="px-3 py-1 rounded-full bg-red-600/20 text-red-200 border border-red-300/20 text-xs font-bold">
                <%= low_stock_count %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-indigo-100">Last update</span>
              <span class="text-xs text-pink-100"><%= Time.zone.now.strftime("%H:%M") %></span>
            </div>
          </div>
        </div>
      </section>

      <!-- Recent Orders & Low Stock -->
      <section class="mt-8 grid grid-cols-1 xl:grid-cols-3 gap-6">
        <!-- Recent orders -->
        <div class="xl:col-span-2 rounded-2xl bg-gradient-to-br from-indigo-950 via-indigo-900/60 to-pink-900/80 border border-indigo-500/20 overflow-hidden shadow-lg">
          <div class="p-6 border-b border-white/10 flex items-center justify-between">
            <div>
              <div class="text-base font-bold text-white">Recent Orders</div>
              <div class="text-xs text-pink-200 mt-1">Last <%= (@recent_orders&.size || 0) %> orders</div>
            </div>
            <%= link_to "View all", admin_orders_path, class: "text-sm text-indigo-300 hover:text-pink-200 font-semibold" %>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="bg-black/10">
                <tr class="text-gray-200">
                  <th class="text-left font-bold px-6 py-4">Order</th>
                  <th class="text-left font-bold px-6 py-4">Customer</th>
                  <th class="text-left font-bold px-6 py-4">Date</th>
                  <th class="text-left font-bold px-6 py-4">Total</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-white/5">
                <% (@recent_orders || []).each do |order| %>
                  <tr class="hover:bg-pink-900/20">
                    <td class="px-6 py-4 text-white font-bold">
                      <%= link_to "##{order.id}", admin_order_path(order), class: "hover:underline" %>
                    </td>
                    <td class="px-6 py-4 text-indigo-100"><%= order.user&.email || "—" %></td>
                    <td class="px-6 py-4 text-pink-100"><%= l(order.created_at, format: :short) rescue order.created_at.to_s %></td>
                    <td class="px-6 py-4 text-pink-200"><%= number_to_currency(order.try(:total_price) || 0) %></td>
                  </tr>
                <% end %>
                <% if (@recent_orders || []).empty? %>
                  <tr>
                    <td class="px-6 py-8 text-pink-100" colspan="4">No recent orders yet.</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- Low stock -->
        <div class="rounded-2xl bg-gradient-to-br from-pink-900/40 via-indigo-950/80 to-indigo-900/70 border border-pink-500/20 overflow-hidden shadow-lg">
          <div class="p-6 border-b border-white/10 flex items-center justify-between">
            <div>
              <div class="text-base font-bold text-white">Low Stock</div>
              <div class="text-xs text-pink-100 mt-1">Products needing restock</div>
            </div>
            <%= link_to "Products", admin_products_path, class: "text-sm text-indigo-300 hover:text-pink-200 font-semibold" %>
          </div>
          <div class="p-6 space-y-4">
            <% if @low_stock_products.present? %>
              <% @low_stock_products.each do |p| %>
                <div class="flex items-center justify-between rounded-xl bg-black/10 border border-white/10 px-4 py-3">
                  <div>
                    <div class="text-base text-white font-medium"><%= p.try(:name) || "Product ##{p.id}" %></div>
                    <div class="text-xs text-indigo-100 mt-1">ID: <%= p.id %></div>
                  </div>
                  <div class="text-xs font-bold px-3 py-1 rounded-full bg-rose-600/15 border border-rose-500/20 text-rose-200">
                    Stock: <%= p.try(:stock_quantity) %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-base text-indigo-100">No low stock products found.</div>
            <% end %>
          </div>
        </div>
      </section>
    </main>
  </div>
</div>