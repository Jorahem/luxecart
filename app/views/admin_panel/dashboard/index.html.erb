<%# Premium Admin Dashboard - Dark style %>

<div class="min-h-screen bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950 text-gray-100">
  <%# --- Topbar --- %>
  <div class="flex flex-row items-center justify-between px-6 pt-5 pb-4 border-b border-white/5">
    <div class="font-bold text-lg tracking-tight flex flex-row items-center gap-2">
      <i class="fa-solid fa-gem text-indigo-400 text-2xl"></i>
      <span class="text-white">LuxeCart Admin</span>
      <span class="ml-2 text-xs font-semibold px-2 py-1 rounded-full bg-white/5 border border-white/10 text-gray-300">
        Dashboard
      </span>
    </div>

    <div class="flex flex-row items-center gap-3">
      <div class="relative hidden sm:block">
        <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
        <input
          class="w-80 bg-white/5 border border-white/10 rounded-xl py-2 pl-9 pr-3 text-sm text-white placeholder:text-gray-400 focus:ring focus:ring-indigo-400/30 focus:outline-none"
          placeholder="Search orders, users, products..."
        />
      </div>

      <button class="relative h-10 w-10 grid place-items-center rounded-xl bg-white/5 border border-white/10 text-gray-200 hover:bg-white/10">
        <i class="fa-solid fa-bell"></i>
      </button>

      <div class="flex items-center gap-2 rounded-xl bg-white/5 border border-white/10 px-3 py-2">
        <i class="fa-solid fa-user-shield text-indigo-300"></i>
        <span class="text-sm font-medium text-white"><%= current_admin&.email || "Admin" %></span>
      </div>
    </div>
  </div>

  <div class="flex">
    <%# --- Sidebar --- %>
    <aside class="hidden lg:flex flex-col w-64 min-h-[calc(100vh-72px)] bg-black/10 border-r border-white/5 p-4">
      <nav class="flex flex-col gap-1 text-gray-200">
        <%= link_to admin_dashboard_path,
          class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5 #{'bg-white/5 border border-white/10' if request.path == admin_dashboard_path}" do %>
          <i class="fa-solid fa-gauge-high text-indigo-300"></i>
          <span class="font-semibold">Dashboard</span>
        <% end %>

        <%= link_to admin_orders_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-receipt text-gray-300"></i>
          <span>Orders</span>
        <% end %>

        <%= link_to admin_products_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-box text-gray-300"></i>
          <span>Products</span>
        <% end %>

        <%= link_to admin_categories_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-list text-gray-300"></i>
          <span>Categories</span>
        <% end %>

        <%= link_to admin_users_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-users text-gray-300"></i>
          <span>Customers</span>
        <% end %>

        <%= link_to admin_payments_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-credit-card text-gray-300"></i>
          <span>Payments</span>
        <% end %>

        <%= link_to admin_reports_path, class: "flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5" do %>
          <i class="fa-solid fa-chart-line text-gray-300"></i>
          <span>Reports</span>
        <% end %>
      </nav>

      <div class="mt-6 p-4 rounded-2xl bg-gradient-to-br from-indigo-600/20 to-fuchsia-600/10 border border-white/10">
        <div class="text-sm font-semibold text-white">Quick actions</div>
        <div class="mt-3 flex flex-col gap-2">
          <%= link_to "Add product", new_admin_product_path, class: "px-3 py-2 rounded-xl bg-white/10 hover:bg-white/15 border border-white/10 text-sm" %>
          <%= link_to "View orders", admin_orders_path, class: "px-3 py-2 rounded-xl bg-white/10 hover:bg-white/15 border border-white/10 text-sm" %>
          <%= link_to "Manage coupons", admin_coupons_path, class: "px-3 py-2 rounded-xl bg-white/10 hover:bg-white/15 border border-white/10 text-sm" %>
        </div>
      </div>
    </aside>

    <%# --- Main content --- %>
    <main class="flex-1 p-6">
      <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-3">
        <div>
          <h1 class="text-2xl font-bold tracking-tight text-white">Dashboard overview</h1>
          <p class="text-sm text-gray-300 mt-1">Key metrics, recent activity, and store health.</p>
        </div>

        <div class="flex gap-2">
          <span class="text-xs px-3 py-2 rounded-xl bg-white/5 border border-white/10 text-gray-300">
            <i class="fa-regular fa-calendar mr-2"></i>
            <%= Time.zone.now.strftime("%Y-%m-%d") %>
          </span>
        </div>
      </div>

      <%# --- KPI cards --- %>
      <section class="mt-6 grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4">
        <div class="rounded-2xl bg-white/5 border border-white/10 p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-300">Total Orders</div>
            <div class="h-9 w-9 rounded-xl bg-indigo-500/20 border border-indigo-400/20 grid place-items-center">
              <i class="fa-solid fa-bag-shopping text-indigo-300"></i>
            </div>
          </div>
          <div class="mt-3 text-3xl font-bold text-white"><%= (@total_orders || 0) %></div>
          <div class="mt-2 text-xs text-gray-400">All-time</div>
        </div>

        <div class="rounded-2xl bg-white/5 border border-white/10 p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-300">Revenue</div>
            <div class="h-9 w-9 rounded-xl bg-emerald-500/20 border border-emerald-400/20 grid place-items-center">
              <i class="fa-solid fa-coins text-emerald-300"></i>
            </div>
          </div>
          <div class="mt-3 text-3xl font-bold text-white">
            <%= number_to_currency((@total_revenue || 0)) %>
          </div>
          <div class="mt-2 text-xs text-gray-400">All-time</div>
        </div>

        <div class="rounded-2xl bg-white/5 border border-white/10 p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-300">Orders Today</div>
            <div class="h-9 w-9 rounded-xl bg-yellow-500/20 border border-yellow-400/20 grid place-items-center">
              <i class="fa-solid fa-bolt text-yellow-300"></i>
            </div>
          </div>
          <div class="mt-3 text-3xl font-bold text-white"><%= (@orders_today || 0) %></div>
          <div class="mt-2 text-xs text-gray-400">Since midnight</div>
        </div>

        <div class="rounded-2xl bg-white/5 border border-white/10 p-5">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-300">Customers</div>
            <div class="h-9 w-9 rounded-xl bg-fuchsia-500/20 border border-fuchsia-400/20 grid place-items-center">
              <i class="fa-solid fa-user-group text-fuchsia-300"></i>
            </div>
          </div>
          <div class="mt-3 text-3xl font-bold text-white"><%= (@total_users || 0) %></div>
          <div class="mt-2 text-xs text-gray-400">Registered users</div>
        </div>
      </section>

      <section class="mt-6 grid grid-cols-1 xl:grid-cols-3 gap-4">
        <%# Recent orders %>
        <div class="xl:col-span-2 rounded-2xl bg-white/5 border border-white/10 overflow-hidden">
          <div class="p-5 border-b border-white/10 flex items-center justify-between">
            <div>
              <div class="text-sm font-semibold text-white">Recent orders</div>
              <div class="text-xs text-gray-400 mt-1">Last <%= (@recent_orders&.size || 0) %> orders</div>
            </div>
            <%= link_to "View all", admin_orders_path, class: "text-sm text-indigo-300 hover:text-indigo-200" %>
          </div>

          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="text-gray-300">
                <tr class="bg-black/10">
                  <th class="text-left font-medium px-5 py-3">Order</th>
                  <th class="text-left font-medium px-5 py-3">Date</th>
                  <th class="text-left font-medium px-5 py-3">Total</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-white/5">
                <% (@recent_orders || []).each do |order| %>
                  <tr class="hover:bg-white/5">
                    <td class="px-5 py-3 text-white font-medium">
                      <%= link_to "##{order.id}", admin_order_path(order), class: "hover:underline" %>
                    </td>
                    <td class="px-5 py-3 text-gray-300"><%= l(order.created_at, format: :short) rescue order.created_at.to_s %></td>
                    <td class="px-5 py-3 text-gray-200"><%= number_to_currency(order.try(:total_price) || 0) %></td>
                  </tr>
                <% end %>

                <% if (@recent_orders || []).empty? %>
                  <tr>
                    <td class="px-5 py-8 text-gray-400" colspan="3">No recent orders yet.</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <%# Low stock %>
        <div class="rounded-2xl bg-white/5 border border-white/10 overflow-hidden">
          <div class="p-5 border-b border-white/10 flex items-center justify-between">
            <div>
              <div class="text-sm font-semibold text-white">Low stock</div>
              <div class="text-xs text-gray-400 mt-1">Products that need restocking</div>
            </div>
            <%= link_to "Products", admin_products_path, class: "text-sm text-indigo-300 hover:text-indigo-200" %>
          </div>

          <div class="p-5 space-y-3">
            <% if @low_stock_products.present? %>
              <% @low_stock_products.each do |p| %>
                <div class="flex items-center justify-between rounded-xl bg-black/10 border border-white/10 px-4 py-3">
                  <div>
                    <div class="text-sm text-white font-medium"><%= p.try(:name) || "Product ##{p.id}" %></div>
                    <div class="text-xs text-gray-400">ID: <%= p.id %></div>
                  </div>
                  <div class="text-xs font-semibold px-2.5 py-1 rounded-full bg-red-500/15 border border-red-400/20 text-red-200">
                    Stock: <%= p.try(:stock_quantity) %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-sm text-gray-400">No low stock products found (or no stock_quantity column).</div>
            <% end %>
          </div>
        </div>
      </section>
    </main>
  </div>
</div>