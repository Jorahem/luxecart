<%= form_with model: [:admin, @user], local: true do |f| %>
  <div class="space-y-5">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">First name</label>
        <%= f.text_field :first_name, class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Last name</label>
        <%= f.text_field :last_name, class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Email</label>
      <%= f.email_field :email, class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Password</label>
        <%= f.password_field :password, class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <p class="text-xs text-slate-400 mt-1">Leave blank to keep current password when editing.</p>
      </div>

      <div>
        <label class="block text-xs font-semibold text-slate-300 mb-2">Password confirmation</label>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="flex items-center gap-6">
      <% if @user.respond_to?(:admin) %>
        <div class="flex items-center gap-3">
          <%= f.check_box :admin, class: "h-4 w-4 rounded border-white/10 bg-white text-indigo-600 focus:ring-indigo-500" %>
          <label class="text-sm text-slate-200">Admin</label>
        </div>
      <% end %>

      <% if @user.respond_to?(:blocked) %>
        <div class="flex items-center gap-3">
          <%= f.check_box :blocked, class: "h-4 w-4 rounded border-white/10 bg-white text-indigo-600 focus:ring-indigo-500" %>
          <label class="text-sm text-slate-200">Blocked</label>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit class: "px-5 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow" %>

      <%= link_to "Cancel",
            admin_users_path,
            class: "px-5 py-3 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 text-sm font-semibold text-black" %>
    </div>
  </div>
<% end %>