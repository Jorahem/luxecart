<main class="px-4 py-10 min-h-screen" style="background: linear-gradient(100deg, #e0e7ff 60%, #f3e8ff 100%);">
  <div class="max-w-5xl mx-auto">

    <!-- HEADER -->
    <div class="mb-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-indigo-600 to-purple-600 text-xs font-bold text-white mb-4 shadow-lg">
        <span class="h-2 w-2 rounded-full bg-white animate-pulse"></span>
        Edit Order
      </div>
      <h1 class="text-5xl font-extrabold text-indigo-900 mb-2 tracking-tight drop-shadow-sm">
        Edit Order <%= @order.order_number.presence || "##{@order.id}" %>
      </h1>
      <p class="text-lg text-purple-700 font-semibold">Update order details, status, and tracking information.</p>
    </div>

    <!-- ERROR MESSAGES -->
    <% if @order.errors.any? %>
      <div class="mb-8 rounded-2xl bg-gradient-to-r from-rose-500 to-red-600 text-white p-6 shadow-xl">
        <div class="flex items-start gap-3">
          <i class="fas fa-exclamation-triangle text-2xl mt-1"></i>
          <div>
            <h2 class="text-xl font-bold mb-2">
              <%= pluralize(@order.errors.count, "error") %> prevented this order from being saved:
            </h2>
            <ul class="list-disc list-inside space-y-1">
              <% @order.errors.full_messages.each do |message| %>
                <li class="font-semibold"><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- FORM -->
    <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
      
      <!-- MAIN FORM CARD -->
      <div class="rounded-2xl shadow-2xl border border-purple-200 overflow-hidden bg-white mb-6">
        
        <!-- Card Header -->
        <div class="px-6 py-5 border-b border-purple-100 bg-gradient-to-r from-indigo-600 to-purple-600">
          <h2 class="text-2xl font-bold text-white flex items-center gap-3">
            <i class="fa-solid fa-edit text-purple-200"></i> 
            Order Details
          </h2>
          <p class="text-sm text-indigo-100 mt-1">Update order status, tracking, and other information</p>
        </div>

        <!-- Card Body -->
        <div class="p-8">
          
          <!-- Order Status Section -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
              <i class="fas fa-info-circle text-indigo-500"></i>
              Order Status
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              
              <!-- Status Dropdown -->
              <div>
                <label class="block text-sm font-bold text-indigo-900 mb-2">
                  <i class="fas fa-flag text-purple-500 mr-1"></i>
                  Status *
                </label>
                <%= f.select :status, 
                      Order.statuses.keys.map { |s| [s.humanize, s] },
                      {},
                      class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm appearance-none cursor-pointer" %>
                <p class="text-xs text-indigo-500 mt-2 flex items-center gap-1">
                  <i class="fas fa-lightbulb"></i>
                  Updates customer tracking timeline
                </p>
              </div>

              <!-- Payment Status -->
              <div>
                <label class="block text-sm font-bold text-indigo-900 mb-2">
                  <i class="fas fa-credit-card text-emerald-500 mr-1"></i>
                  Payment Status
                </label>
                <%= f.select :payment_status, 
                      Order.payment_statuses.keys.map { |s| [s.humanize, s] },
                      {},
                      class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm appearance-none cursor-pointer" %>
              </div>

            </div>
          </div>

          <div class="border-t border-purple-100 my-8"></div>

          <!-- Tracking Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
              <i class="fas fa-truck text-blue-500"></i>
              Tracking Information
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              
              <!-- Tracking Number -->
              <div>
                <label class="block text-sm font-bold text-indigo-900 mb-2">
                  <i class="fas fa-barcode text-blue-500 mr-1"></i>
                  Tracking Number
                </label>
                <%= f.text_field :tracking_number,
                      placeholder: "Enter tracking number",
                      class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm placeholder-indigo-300" %>
                <p class="text-xs text-indigo-500 mt-2 flex items-center gap-1">
                  <i class="fas fa-info-circle"></i>
                  Customers can track their order with this number
                </p>
              </div>

              <!-- Payment Method -->
              <div>
                <label class="block text-sm font-bold text-indigo-900 mb-2">
                  <i class="fas fa-wallet text-purple-500 mr-1"></i>
                  Payment Method
                </label>
                <%= f.text_field :payment_method,
                      placeholder: "e.g., Stripe, PayPal, COD",
                      class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm placeholder-indigo-300" %>
              </div>

            </div>
          </div>

          <div class="border-t border-purple-100 my-8"></div>

          <!-- Additional Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
              <i class="fas fa-file-alt text-indigo-500"></i>
              Additional Information
            </h3>
            
            <!-- Order Notes -->
            <div>
              <label class="block text-sm font-bold text-indigo-900 mb-2">
                <i class="fas fa-sticky-note text-amber-500 mr-1"></i>
                Order Notes
              </label>
              <%= f.text_area :notes,
                    rows: 4,
                    placeholder: "Add any special notes or instructions...",
                    class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm placeholder-indigo-300 resize-none" %>
              <p class="text-xs text-indigo-500 mt-2 flex items-center gap-1">
                <i class="fas fa-lightbulb"></i>
                Internal notes (not visible to customer)
              </p>
            </div>
          </div>

          <!-- Current Order Info (Read-only) -->
          <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-2xl p-6 border-2 border-indigo-100">
            <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
              <i class="fas fa-receipt text-indigo-500"></i>
              Order Summary
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              
              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Order Number</p>
                <p class="text-lg font-bold text-indigo-900">
                  <%= @order.order_number.presence || "##{@order.id}" %>
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Customer</p>
                <p class="text-lg font-bold text-indigo-900">
                  <%= @order.user&.email || "â€”" %>
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Total Price</p>
                <p class="text-2xl font-extrabold text-emerald-700">
                  <%= number_to_currency(@order.total_price) rescue @order.total_price %>
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Created</p>
                <p class="text-sm font-bold text-indigo-700">
                  <%= l(@order.created_at, format: :long) rescue @order.created_at.to_s %>
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Last Updated</p>
                <p class="text-sm font-bold text-indigo-700">
                  <%= l(@order.updated_at, format: :long) rescue @order.updated_at.to_s %>
                </p>
              </div>

              <div>
                <p class="text-xs font-semibold text-purple-600 uppercase tracking-wide mb-1">Items Count</p>
                <p class="text-lg font-bold text-indigo-900">
                  <%= @order.order_items.count %> item<%= 's' unless @order.order_items.count == 1 %>
                </p>
              </div>

            </div>
          </div>

        </div>
      </div>

      <!-- ACTION BUTTONS -->
      <div class="flex items-center justify-between gap-4 flex-wrap">
        
        <!-- Back Button -->
        <%= link_to admin_orders_path,
              class: "inline-flex items-center gap-3 px-6 py-3 rounded-xl bg-white/90 backdrop-blur-sm text-indigo-700 text-sm font-bold shadow-lg hover:shadow-xl hover:bg-white transition-all duration-200 border border-indigo-200" do %>
          <i class="fas fa-arrow-left"></i>
          Cancel & Go Back
        <% end %>

        <div class="flex items-center gap-4">
          <!-- View Order Button -->
          <%= link_to admin_order_path(@order),
                class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-bold shadow-lg hover:shadow-xl transition-all duration-200" do %>
            <i class="fas fa-eye"></i>
            View Order
          <% end %>

          <!-- Save Button -->
          <%= f.submit "Save Changes",
                class: "inline-flex items-center gap-2 px-8 py-3 rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white text-lg font-bold shadow-xl hover:shadow-2xl transition-all duration-200 cursor-pointer transform hover:scale-105" %>
        </div>

      </div>

    <% end %>

    <!-- QUICK ACTIONS -->
    <div class="mt-8 rounded-2xl bg-white/80 backdrop-blur-md p-6 border border-purple-200 shadow-lg">
      <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
        <i class="fas fa-bolt text-amber-500"></i>
        Quick Actions
      </h3>
      <div class="flex items-center gap-3 flex-wrap">
        
        <!-- Quick Status Updates -->
        <% if @order.status != "shipped" %>
          <%= button_to mark_as_shipped_admin_order_path(@order),
                method: :patch,
                class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-bold shadow-md hover:shadow-lg transition-all duration-200" do %>
            <i class="fas fa-shipping-fast"></i>
            Mark as Shipped
          <% end %>
        <% end %>

        <% if @order.status != "delivered" %>
          <%= button_to mark_as_delivered_admin_order_path(@order),
                method: :patch,
                class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gradient-to-r from-emerald-500 to-green-600 hover:from-emerald-600 hover:to-green-700 text-white font-bold shadow-md hover:shadow-lg transition-all duration-200" do %>
            <i class="fas fa-check-circle"></i>
            Mark as Delivered
          <% end %>
        <% end %>

        <!-- Delete Order -->
        <%= button_to admin_order_path(@order),
              method: :delete,
              form: { data: { turbo_confirm: "Are you sure you want to delete this order permanently? This action cannot be undone!" } },
              class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gradient-to-r from-rose-500 to-red-600 hover:from-rose-600 hover:to-red-700 text-white font-bold shadow-md hover:shadow-lg transition-all duration-200" do %>
          <i class="fas fa-trash-alt"></i>
          Delete Order
        <% end %>

      </div>
      <p class="text-xs text-indigo-500 mt-3 flex items-center gap-1">
        <i class="fas fa-info-circle"></i>
        Quick actions will update the order immediately without requiring you to save the form
      </p>
    </div>

  </div>
</main>

