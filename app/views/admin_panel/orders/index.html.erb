<main class="px-4 py-6">
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-5">
      <div>
        <h1 class="text-2xl font-extrabold text-gray-900">Orders</h1>
        <p class="text-sm text-gray-500 mt-1">Manage order statuses and tracking.</p>
      </div>

      <div class="flex items-center gap-2">
        <%= link_to "Dashboard", admin_dashboard_path,
              class: "px-4 py-2 rounded-lg border bg-white hover:bg-gray-50 text-sm font-semibold" %>
      </div>
    </div>

    <div class="bg-white border rounded-2xl shadow-sm overflow-hidden">
      <div class="p-4 border-b bg-gray-50 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <div class="text-sm font-semibold text-gray-700">
          <%= pluralize(@orders.count, "order") %>
        </div>

        <div class="flex items-center gap-2">
          <%= form_with url: admin_orders_path, method: :get, local: true, class: "flex items-center gap-2" do %>
            <label class="text-xs text-gray-500">Filter</label>
            <select name="status" class="text-sm border rounded-lg px-3 py-2 bg-white">
              <option value="">All statuses</option>
              <% Order.statuses.keys.each do |s| %>
                <option value="<%= s %>" <%= "selected" if params[:status].to_s == s %>><%= s.humanize %></option>
              <% end %>
            </select>
            <button class="px-3 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold">
              Apply
            </button>
          <% end %>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead class="bg-white">
            <tr class="text-left text-xs uppercase tracking-wider text-gray-500 border-b">
              <th class="px-4 py-3">Order</th>
              <th class="px-4 py-3">Customer</th>
              <th class="px-4 py-3">Total</th>
              <th class="px-4 py-3">Status</th>
              <th class="px-4 py-3">Tracking</th>
              <th class="px-4 py-3">Created</th>
              <th class="px-4 py-3"></th>
            </tr>
          </thead>

          <tbody class="divide-y">
            <% @orders.each do |order| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 font-semibold text-gray-900">
                  <%= order.order_number.presence || "##{order.id}" %>
                </td>

                <td class="px-4 py-3 text-gray-700">
                  <div class="font-medium"><%= order.full_name %></div>
                  <div class="text-xs text-gray-500"><%= order.user&.email %></div>
                </td>

                <td class="px-4 py-3 font-semibold">
                  <%= number_to_currency(order.total_price) %>
                </td>

                <td class="px-4 py-3">
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold border
                    <%= case order.status.to_s
                        when 'pending' then 'bg-gray-50 text-gray-700 border-gray-200'
                        when 'paid', 'processing' then 'bg-indigo-50 text-indigo-700 border-indigo-100'
                        when 'shipped' then 'bg-blue-50 text-blue-700 border-blue-100'
                        when 'delivered' then 'bg-green-50 text-green-700 border-green-100'
                        when 'received' then 'bg-emerald-50 text-emerald-700 border-emerald-100'
                        when 'cancelled' then 'bg-red-50 text-red-700 border-red-100'
                        else 'bg-gray-50 text-gray-700 border-gray-200'
                        end %>">
                    <%= order.status.to_s.humanize %>
                  </span>
                </td>

                <td class="px-4 py-3 text-gray-700">
                  <%= order.tracking_number.presence || "-" %>
                </td>

                <td class="px-4 py-3 text-gray-500">
                  <%= l(order.created_at, format: :short) rescue order.created_at.to_s %>
                </td>

                <td class="px-4 py-3 text-right">
                  <%= link_to "View", admin_order_path(order),
                        class: "px-3 py-2 rounded-lg bg-white border hover:bg-gray-50 text-sm font-semibold" %>
                </td>
              </tr>
            <% end %>

            <% if @orders.empty? %>
              <tr>
                <td colspan="7" class="px-4 py-10 text-center text-gray-500">
                  No orders found.
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>