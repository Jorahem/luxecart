<main class="px-4 py-10 min-h-screen" style="background: linear-gradient(100deg, #e0e7ff 60%, #f3e8ff 100%);">
  <div class="max-w-6xl mx-auto">

    <% total_orders = @orders.size %>
    <% pending_count    = @orders.count { |o| o.status.to_s == "pending" } %>
    <% processing_count = @orders.count { |o| o.status.to_s == "processing" } %>
    <% delivered_count  = @orders.count { |o| o.status.to_s == "delivered" } %>
    <% cancelled_count  = @orders.count { |o| o.status.to_s == "cancelled" } %>

    <!-- HEADER -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-4 mb-8">
      <div>
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-fuchsia-500 to-indigo-400 text-xs font-bold text-white mb-4 shadow">
          <span class="h-2 w-2 rounded-full bg-white/80"></span>
          Orders
        </div>
        <h1 class="text-4xl font-extrabold text-indigo-700 mb-2 tracking-tight">Order Management</h1>
        <p class="text-base text-fuchsia-800 mb-3 font-medium">Track, process, and review all customer orders.</p>
      </div>
      <div class="flex items-center gap-3">
        <%= link_to "Export CSV",
              admin_orders_path(format: :csv),
              class: "px-5 py-2 rounded-xl bg-gradient-to-r from-blue-400 to-blue-600 text-white text-base font-bold shadow border-0 hover:from-blue-500 hover:to-indigo-500 transition" %>
        <%= link_to admin_dashboard_path,
              class: "px-5 py-2 rounded-xl border-0 bg-gradient-to-r from-gray-300 to-gray-100 text-gray-800 text-sm font-bold shadow-sm flex items-center gap-2 hover:from-fuchsia-200 hover:to-indigo-100 transition" do %>
          <i class="fas fa-arrow-left"></i> Back
        <% end %>
      </div>
    </div>

    <!-- STATS -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-3 mb-6">
      <% stats = [
        ["Total", total_orders, "bg-blue-100 text-blue-700"],
        ["Pending", pending_count, "bg-yellow-100 text-yellow-700"],
        ["Processing", processing_count, "bg-indigo-100 text-indigo-700"],
        ["Delivered", delivered_count, "bg-emerald-100 text-emerald-700"],
        ["Cancelled", cancelled_count, "bg-rose-100 text-rose-700"]
      ] %>
      <% stats.each do |label, value, color| %>
        <div class="rounded-2xl border border-fuchsia-100 bg-white shadow p-4 flex flex-col items-center <%= color %>">
          <div class="text-xs font-semibold mb-1"><%= label %></div>
          <div class="text-2xl font-extrabold"><%= value %></div>
        </div>
      <% end %>
    </div>

    <!-- FILTERS -->
    <div class="rounded-xl bg-gradient-to-r from-indigo-50 via-white to-fuchsia-100 p-6 mb-8 border border-fuchsia-100/70 shadow">
      <form id="orders-filters" method="get" action="<%= admin_orders_path %>">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
          <!-- Search -->
          <div class="md:col-span-2">
            <label class="block text-xs font-semibold text-indigo-700 mb-2">Search</label>
            <input
              type="text"
              name="q"
              value="<%= params[:q].to_s %>"
              placeholder="Order number / customer email"
              class="w-full px-4 py-3 rounded-full border border-indigo-200 text-indigo-800 bg-indigo-50 font-medium focus:outline-none focus:ring-2 focus:ring-fuchsia-300 shadow placeholder-indigo-400"
            >
          </div>
          <!-- Status Dropdown -->
          <div>
            <label class="block text-xs font-semibold text-fuchsia-700 mb-2">Status</label>
            <% selected_status = params[:status].to_s %>
            <select
              name="status"
              class="w-full px-4 py-3 rounded-full border border-fuchsia-200 text-fuchsia-800 bg-fuchsia-50 focus:outline-none focus:ring-2 focus:ring-indigo-300 shadow"
            >
              <option value="" <%= "selected" if selected_status.blank? %>>All statuses</option>
              <% (Order.respond_to?(:statuses) ? Order.statuses.keys : []).each do |k| %>
                <option value="<%= k %>" <%= "selected" if selected_status == k %>><%= k.humanize %></option>
              <% end %>
            </select>
          </div>
          <!-- Buttons -->
          <div class="flex gap-3">
            <button
              type="submit"
              class="flex-1 px-5 py-3 rounded-xl bg-gradient-to-r from-indigo-500 to-pink-500 hover:from-indigo-600 hover:to-pink-600 text-white font-bold shadow"
            >
              Apply
            </button>
            <%= link_to "Reset",
                  admin_orders_path,
                  class: "px-5 py-3 rounded-xl border border-fuchsia-100 bg-white hover:bg-gray-50 text-sm font-semibold text-fuchsia-700 text-center shadow" %>
          </div>
        </div>
      </form>
    </div>

    <!-- ORDERS TABLE -->
    <div class="rounded-xl shadow-2xl border border-fuchsia-200/70 overflow-hidden bg-white/95">
      <div class="px-6 py-5 border-b border-fuchsia-100 bg-gradient-to-r from-fuchsia-50 to-indigo-100">
        <h2 class="text-xl font-bold text-fuchsia-800 mb-1 flex items-center gap-2">
          <i class="fa-solid fa-receipt text-fuchsia-400"></i> All Orders
        </h2>
        <p class="text-xs text-indigo-400">Everything at a glance</p>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full text-base">
          <thead class="bg-gradient-to-r from-fuchsia-50 to-indigo-100">
            <tr>
              <th class="px-5 py-4 font-extrabold text-fuchsia-600 text-sm">Order</th>
              <th class="px-5 py-4 font-extrabold text-indigo-600 text-sm">User</th>
              <th class="px-5 py-4 font-extrabold text-green-700 text-sm">Total</th>
              <th class="px-5 py-4 font-extrabold text-yellow-700 text-sm">Status</th>
              <th class="px-5 py-4 font-extrabold text-blue-700 text-sm">Tracking</th>
              <th class="px-5 py-4 font-extrabold text-indigo-800 text-sm">Created</th>
              <th class="px-5 py-4 font-extrabold text-rose-700 text-right text-sm" style="min-width:180px;">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-fuchsia-50">
            <% if @orders.blank? %>
              <tr>
                <td colspan="7" class="px-5 py-10 text-center text-indigo-400 font-bold">
                  No orders found.
                </td>
              </tr>
            <% else %>
              <% @orders.each do |order| %>
                <tr class="hover:bg-gradient-to-l hover:from-indigo-50 hover:to-fuchsia-50 transition">
                  <td class="px-5 py-5 text-fuchsia-800 font-extrabold">
                    <%= order.order_number.presence || "##{order.id}" %>
                  </td>
                  <td class="px-5 py-5 text-indigo-900 font-bold">
                    <%= order.user&.email || "—" %>
                  </td>
                  <td class="px-5 py-5 text-lg text-emerald-700 font-extrabold">
                    <%= number_to_currency(order.total_price) rescue order.total_price %>
                  </td>
                  <td class="px-5 py-5 text-center">
                    <% status = order.status.to_s.downcase %>
                    <% if status == "delivered" %>
                      <span class="inline-flex items-center px-4 py-1 rounded-full text-xs font-bold bg-emerald-200 text-emerald-700 border-0" style="letter-spacing:.05em;">
                        <i class="fa-solid fa-check-circle text-emerald-600 mr-1"></i> Delivered
                      </span>
                    <% elsif status == "pending" %>
                      <span class="inline-flex items-center px-4 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-700 border-0">
                        <i class="fa-solid fa-hourglass-half text-yellow-500 mr-1"></i> Pending
                      </span>
                    <% elsif status == "processing" %>
                      <span class="inline-flex items-center px-4 py-1 rounded-full text-xs font-bold bg-indigo-100 text-indigo-700 border-0">
                        <i class="fa-solid fa-spinner text-indigo-400 mr-1"></i> Processing
                      </span>
                    <% elsif status == "cancelled" %>
                      <span class="inline-flex items-center px-4 py-1 rounded-full text-xs font-bold bg-rose-100 text-rose-700 border-0">
                        <i class="fa-solid fa-xmark-circle text-rose-500 mr-1"></i> Cancelled
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-4 py-1 rounded-full text-xs font-bold bg-fuchsia-200 text-fuchsia-700 border-0">
                        <i class="fa-solid fa-info-circle text-fuchsia-500 mr-1"></i> <%= status.capitalize %>
                      </span>
                    <% end %>
                  </td>
                  <td class="px-5 py-5 text-blue-700 font-semibold">
                    <%= order.tracking_number.presence || "—" %>
                  </td>
                  <td class="px-5 py-5 text-indigo-500">
                    <%= l(order.created_at, format: :short) rescue order.created_at.to_s %>
                  </td>
                  <td class="px-5 py-5 text-right" style="min-width:180px;">
                    <div class="flex items-center justify-end gap-2 flex-nowrap">
                      <%= link_to "View",
                            admin_order_path(order),
                            class: "px-4 py-2 rounded-full bg-blue-500 text-white font-bold border-0 shadow hover:bg-blue-600 transition" %>
                      <%= link_to "Edit",
                            edit_admin_order_path(order),
                            class: "px-4 py-2 rounded-full bg-indigo-400 text-white font-bold border-0 shadow hover:bg-indigo-500 transition" %>
                      <%= button_to "Delete",
                            admin_order_path(order),
                            method: :delete,
                            form: { data: { turbo_confirm: "Delete this order permanently?" } },
                            class: "px-4 py-2 rounded-full bg-rose-500 text-black font-bold border-0 shadow hover:bg-rose-700 transition" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bottom back button -->
    <div class="mt-6 flex items-center justify-end">
      <%= link_to admin_dashboard_path,
            class: "inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-gray-800 hover:bg-gray-700 text-white font-semibold border border-white/10" do %>
        <i class="fas fa-arrow-left"></i>
        Back to Dashboard
      <% end %>
    </div>
  </div>
</main>