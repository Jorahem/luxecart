<main class="px-4 py-6">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-5">
      <div>
        <h1 class="text-2xl font-extrabold text-gray-900">
          Order <%= @order.order_number.presence || "##{@order.id}" %>
        </h1>
        <p class="text-sm text-gray-500 mt-1">
          Created <%= l(@order.created_at, format: :long) rescue @order.created_at.to_s %>
        </p>
      </div>

      <div class="flex items-center gap-2">
        <%= link_to "Back", admin_orders_path, class: "px-4 py-2 rounded-lg border bg-white hover:bg-gray-50 text-sm font-semibold" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
      <section class="lg:col-span-2 bg-white border rounded-2xl shadow-sm p-5">
        <h2 class="text-sm font-semibold text-gray-700 mb-3">Update status & tracking</h2>

        <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :status, class: "block text-xs font-semibold text-gray-600 mb-1" %>
            <%= f.select :status, Order.statuses.keys.map { |s| [s.humanize, s] },
                  {}, class: "w-full border rounded-xl px-3 py-2 bg-white text-sm" %>
            <p class="text-xs text-gray-500 mt-1">Changing to shipped/delivered will auto-fill timestamps if empty.</p>
          </div>

          <div>
            <%= f.label :tracking_number, class: "block text-xs font-semibold text-gray-600 mb-1" %>
            <%= f.text_field :tracking_number, class: "w-full border rounded-xl px-3 py-2 text-sm", placeholder: "e.g. DHL123456789" %>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <div>
              <%= f.label :shipped_at, class: "block text-xs font-semibold text-gray-600 mb-1" %>
              <%= f.datetime_field :shipped_at, class: "w-full border rounded-xl px-3 py-2 text-sm" %>
            </div>

            <div>
              <%= f.label :delivered_at, class: "block text-xs font-semibold text-gray-600 mb-1" %>
              <%= f.datetime_field :delivered_at, class: "w-full border rounded-xl px-3 py-2 text-sm" %>
            </div>
          </div>

          <div>
            <%= f.label :notes, class: "block text-xs font-semibold text-gray-600 mb-1" %>
            <%= f.text_area :notes, rows: 3, class: "w-full border rounded-xl px-3 py-2 text-sm", placeholder: "Internal notes..." %>
          </div>

          <div class="flex items-center gap-2">
            <button class="px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold shadow">
              Save
            </button>

            <%= link_to "Customer view", order_path(@order),
                  class: "px-4 py-2 rounded-xl border bg-white hover:bg-gray-50 text-sm font-semibold" %>
          </div>
        <% end %>
      </section>

      <aside class="bg-white border rounded-2xl shadow-sm p-5">
        <h2 class="text-sm font-semibold text-gray-700 mb-3">Shipping</h2>

        <div class="text-sm text-gray-700 space-y-1">
          <div class="font-semibold"><%= @order.shipping_full_name %></div>
          <div><%= @order.shipping_street %></div>
          <div><%= [@order.shipping_city, @order.shipping_state, @order.shipping_postal_code].compact.join(", ") %></div>
          <div class="text-xs text-gray-500 mt-2"><%= @order.shipping_phone %></div>
        </div>

        <hr class="my-4">

        <h2 class="text-sm font-semibold text-gray-700 mb-2">Totals</h2>
        <div class="text-sm text-gray-700 space-y-1">
          <div class="flex justify-between"><span>Subtotal</span><span><%= number_to_currency(@order.subtotal) %></span></div>
          <div class="flex justify-between"><span>Shipping</span><span><%= number_to_currency(@order.shipping_cost) %></span></div>
          <div class="flex justify-between"><span>Tax</span><span><%= number_to_currency((@order.respond_to?(:tax_amount) && @order.tax_amount.present?) ? @order.tax_amount : @order.tax) %></span></div>
          <div class="flex justify-between font-semibold"><span>Total</span><span><%= number_to_currency(@order.total_price) %></span></div>
        </div>
      </aside>
    </div>

    <section class="bg-white border rounded-2xl shadow-sm p-5 mt-4">
      <h2 class="text-sm font-semibold text-gray-700 mb-3">Items</h2>

      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-xs uppercase tracking-wider text-gray-500 border-b">
              <th class="py-2 pr-3">Product</th>
              <th class="py-2 pr-3">Qty</th>
              <th class="py-2 pr-3">Unit</th>
              <th class="py-2 pr-3">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y">
            <% @order.order_items.each do |item| %>
              <tr>
                <td class="py-2 pr-3 font-medium text-gray-900">
                  <%= item.product_name.presence || item.product&.name || "Product ##{item.product_id}" %>
                </td>
                <td class="py-2 pr-3"><%= item.quantity %></td>
                <td class="py-2 pr-3"><%= number_to_currency(item.unit_price) %></td>
                <td class="py-2 pr-3 font-semibold"><%= number_to_currency(item.total_price) %></td>
              </tr>
            <% end %>

            <% if @order.order_items.empty? %>
              <tr>
                <td colspan="4" class="py-8 text-center text-gray-500">No items.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</main>