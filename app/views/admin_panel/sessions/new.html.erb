<!-- app/views/admin_panel/sessions/new.html.erb -->

<div class="min-h-screen flex items-center justify-center bg-gray-900 py-8 px-4">
  <div class="w-full max-w-md bg-gray-800 rounded-xl shadow-lg p-8">
    <div class="flex flex-col items-center mb-8">
      <div class="bg-indigo-600 rounded-full h-16 w-16 flex items-center justify-center mb-2">
        <i class="fa-solid fa-user-shield text-3xl text-white"></i>
      </div>
      <h2 class="text-2xl font-semibold text-white mb-1">Admin Login</h2>
      <p class="text-gray-400">LuxeCart Admin Area</p>
    </div>
    <% if flash[:alert] %>
      <div class="mb-4 px-4 py-2 bg-red-700 text-white rounded text-center text-sm"><%= flash[:alert] %></div>
    <% end %>
    <%= form_with url: admin_login_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <div>
        <label for="admin_email" class="block text-gray-300 font-semibold">Email</label>
        <%= f.email_field :email, autofocus: true, required: true, class: "mt-2 w-full px-3 py-2 bg-gray-700 text-white rounded border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-400", id: "admin_email", placeholder: "admin@example.com" %>
      </div>
      <div>
        <label for="admin_password" class="block text-gray-300 font-semibold">Password</label>
        <%= f.password_field :password, required: true, class: "mt-2 w-full px-3 py-2 bg-gray-700 text-white rounded border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-400", id: "admin_password", placeholder: "Password" %>
      </div>
      <div>
        <%= f.submit "Sign in", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded shadow mt-2 transition duration-150" %>
      </div>
    <% end %>
    <div class="pt-6 text-gray-400 text-xs text-center">
      For authorized personnel only.
    </div>
  </div>
</div>