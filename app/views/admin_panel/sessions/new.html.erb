<div class="w-full max-w-xl">
  <div class="bg-gray-800/60 border border-gray-700 rounded-2xl shadow-xl p-8 sm:p-10">
    <div class="flex flex-col items-center text-center mb-7">
      <div class="w-14 h-14 rounded-2xl bg-indigo-600 flex items-center justify-center shadow-md mb-4">
        <i class="fas fa-user-shield text-white text-2xl"></i>
      </div>

      <h1 class="text-3xl font-extrabold text-white">Admin Login</h1>
      <p class="text-sm text-gray-300 mt-1">Sign in to access the LuxeCart admin area</p>
    </div>

    <%= form_with url: admin_login_path, method: :post, local: true do %>
      <div class="space-y-5">
        <div>
          <label class="block text-sm font-semibold text-gray-200 mb-2">Email</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
              <i class="fas fa-envelope"></i>
            </span>
            <input
              type="email"
              name="email"
              value="<%= params[:email].presence || 'admin@example.com' %>"
              class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="admin@example.com"
              required
              autofocus
            />
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-200 mb-2">Password</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
              <i class="fas fa-lock"></i>
            </span>
            <input
              type="password"
              name="password"
              class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="••••••••"
              required
            />
          </div>
        </div>

        <button
          type="submit"
          class="w-full py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-bold shadow-lg transition"
        >
          Sign in
        </button>

        <p class="text-xs text-gray-400 text-center">
          For authorized personnel only.
        </p>
      </div>
    <% end %>
  </div>

  <div class="text-center text-xs text-gray-500 mt-5">
    <span>© <%= Time.current.year %> LuxeCart</span>
  </div>
</div>