<% content_for :title, "Admin Login" %>

<h1>Admin Login</h1>

<%= form_with url: admin_login_path, method: :post, local: true do |f| %>
  <div>
    <%= label_tag :email, "Email" %><br>
    <%= email_field_tag :email, params[:email], required: true, autofocus: true %>
  </div>

  <div style="margin-top:8px;">
    <%= label_tag :password, "Password" %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div style="margin-top:8px;">
    <%= check_box_tag :remember_me, "1", false %>
    <%= label_tag :remember_me, "Remember me" %>
  </div>

  <div style="margin-top:12px;">
    <%= submit_tag "Sign in", class: "btn" %>
  </div>
<% end %>

<p style="margin-top:16px;">
  <small>Use the admin user you created via rails console (example: admin@example.com).</small>
</p>