<% content_for :title, "Inbox | LuxeCart Admin" %>

<% unread_count = ContactMessage.unread.count %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div class="flex items-center gap-3">
      <div class="h-11 w-11 rounded-2xl bg-gradient-to-br from-cyan-500 to-indigo-600 text-white grid place-items-center shadow-lg">
        <i class="fas fa-envelope-open-text"></i>
      </div>

      <div>
        <h1 class="text-2xl md:text-3xl font-extrabold tracking-tight text-slate-50">Inbox</h1>
        <p class="text-sm mt-1 text-slate-300">
          Customer messages & support requests.
        </p>
      </div>
    </div>

    <div class="flex flex-wrap gap-2">
      <div class="px-4 py-3 rounded-2xl bg-slate-900/60 border border-white/10">
        <div class="text-[11px] uppercase tracking-wider text-slate-400">Unread</div>
        <div class="text-2xl font-extrabold text-cyan-200"><%= unread_count %></div>
      </div>

      <%= link_to admin_dashboard_path,
            class: "inline-flex items-center gap-2 px-4 py-3 rounded-2xl bg-slate-900/60 border border-white/10 hover:bg-slate-900 text-sm text-slate-100" do %>
        <i class="fas fa-gauge-high text-cyan-300"></i>
        Dashboard
      <% end %>
    </div>
  </div>

  <!-- Main card -->
  <div class="rounded-3xl overflow-hidden border border-white/10 bg-gradient-to-b from-slate-950/60 to-slate-900/40">
    <div class="grid grid-cols-1 lg:grid-cols-3">

      <!-- Left: message list -->
      <aside class="lg:col-span-1 border-b lg:border-b-0 lg:border-r border-white/10">
        <div class="p-4 border-b border-white/10 bg-black/20">
          <div class="relative">
            <i class="fas fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-sm"></i>
            <input
              class="w-full bg-slate-950/60 border border-white/10 rounded-2xl py-2 pl-9 pr-3 text-sm text-slate-100 placeholder:text-slate-500 focus:ring focus:ring-cyan-400/30 focus:outline-none"
              placeholder="Search (UI only)"
            />
          </div>
        </div>

        <div class="max-h-[70vh] overflow-auto">
          <% if @contact_messages.present? %>
            <% @contact_messages.each do |m| %>
              <%= link_to admin_contact_message_path(m), class: "block group" do %>
                <div class="px-4 py-4 border-b border-white/5 hover:bg-white/5">
                  <div class="flex items-start gap-3">
                    <div class="h-11 w-11 rounded-2xl bg-cyan-500/10 border border-cyan-400/20 grid place-items-center font-extrabold text-cyan-200">
                      <%= (m.name.to_s.strip.presence || "U")[0].upcase %>
                    </div>

                    <div class="min-w-0 flex-1">
                      <div class="flex items-center justify-between gap-3">
                        <div class="min-w-0">
                          <div class="text-slate-50 font-semibold truncate"><%= m.name %></div>
                          <div class="text-xs text-slate-400 truncate"><%= m.email %></div>
                        </div>

                        <% if m.read? %>
                          <span class="text-[11px] px-2 py-1 rounded-full bg-emerald-500/10 border border-emerald-400/20 text-emerald-200">
                            Read
                          </span>
                        <% else %>
                          <span class="text-[11px] px-2 py-1 rounded-full bg-amber-500/10 border border-amber-400/20 text-amber-200">
                            New
                          </span>
                        <% end %>
                      </div>

                      <div class="mt-2 text-sm text-slate-100 font-semibold truncate">
                        <%= m.subject.presence || "No subject" %>
                      </div>
                      <div class="mt-1 text-xs text-slate-400 truncate">
                        <%= m.message.to_s %>
                      </div>

                      <div class="mt-2 text-[11px] text-slate-500">
                        <i class="fas fa-clock mr-1"></i>
                        <%= m.created_at.strftime("%b %d, %Y %H:%M") %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="p-10 text-center">
              <div class="mx-auto h-14 w-14 rounded-3xl bg-cyan-500/10 border border-cyan-400/20 grid place-items-center">
                <i class="fas fa-inbox text-cyan-200 text-xl"></i>
              </div>
              <div class="mt-4 text-slate-50 font-semibold">No messages yet</div>
              <div class="mt-1 text-sm text-slate-400">
                Messages from the contact form will show here.
              </div>
              <div class="mt-5">
                <%= link_to contact_path,
                      class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-cyan-600 hover:bg-cyan-500 text-white text-sm shadow-md" do %>
                  <i class="fas fa-arrow-up-right-from-square"></i>
                  Open Contact page
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </aside>

      <!-- Right: preview panel -->
      <section class="lg:col-span-2">
        <div class="p-10">
          <div class="max-w-xl">
            <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-wider text-slate-400">
              <span class="h-2 w-2 rounded-full bg-cyan-400"></span>
              Preview
            </div>

            <h2 class="mt-3 text-2xl font-extrabold tracking-tight text-slate-50">
              Select a message
            </h2>

            <p class="mt-2 text-sm text-slate-300">
              Choose a message from the left to view details and mark it as read.
            </p>

            <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-3">
              <div class="rounded-2xl bg-slate-950/40 border border-white/10 p-4">
                <div class="text-xs text-slate-400">Tip</div>
                <div class="mt-1 text-sm text-slate-50 font-semibold">Reply quickly</div>
                <div class="mt-1 text-xs text-slate-400">Faster responses improve trust.</div>
              </div>

              <div class="rounded-2xl bg-slate-950/40 border border-white/10 p-4">
                <div class="text-xs text-slate-400">Tip</div>
                <div class="mt-1 text-sm text-slate-50 font-semibold">Mark as read</div>
                <div class="mt-1 text-xs text-slate-400">Keep inbox clean and organized.</div>
              </div>
            </div>

            <div class="mt-6 flex flex-wrap gap-2">
              <%= link_to admin_dashboard_path,
                    class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-slate-900/60 border border-white/10 hover:bg-slate-900 text-sm text-slate-100" do %>
                <i class="fas fa-gauge-high text-cyan-300"></i>
                Dashboard
              <% end %>

              <%= link_to admin_orders_path,
                    class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-slate-900/60 border border-white/10 hover:bg-slate-900 text-sm text-slate-100" do %>
                <i class="fas fa-receipt text-cyan-300"></i>
                Orders
              <% end %>

              <%= link_to admin_products_path,
                    class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-slate-900/60 border border-white/10 hover:bg-slate-900 text-sm text-slate-100" do %>
                <i class="fas fa-box text-cyan-300"></i>
                Products
              <% end %>
            </div>
          </div>
        </div>
      </section>

    </div>
  </div>
</div>