<% content_for :title, "Message from #{@contact_message.name} | LuxeCart Admin" %>

<main class="px-4 py-10 min-h-screen" style="background: linear-gradient(100deg, #e0e7ff 60%, #f3e8ff 100%);">
  <div class="max-w-5xl mx-auto">

    <!-- HEADER -->
    <div class="flex items-center justify-between gap-4 mb-8">
      <%= link_to admin_contact_messages_path,
            class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white/90 backdrop-blur-sm text-indigo-700 text-sm font-bold shadow-lg hover:shadow-xl hover:bg-white transition-all duration-200 border border-indigo-200" do %>
        <i class="fas fa-arrow-left"></i>
        Back to Messages
      <% end %>

      <% unless @contact_message.read? %>
        <%= button_to mark_read_admin_contact_message_path(@contact_message),
              method: :patch,
              class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-emerald-500 to-green-600 hover:from-emerald-600 hover:to-green-700 text-white font-bold shadow-lg hover:shadow-xl transition-all duration-200" do %>
          <i class="fas fa-check-circle"></i>
          Mark as Read
        <% end %>
      <% end %>
    </div>

    <!-- MESSAGE CARD -->
    <div class="rounded-2xl shadow-2xl border border-purple-200 overflow-hidden bg-white mb-6">
      <!-- Header -->
      <div class="px-8 py-6 border-b border-purple-100 bg-gradient-to-r from-indigo-600 to-purple-600">
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 rounded-2xl bg-white/20 backdrop-blur flex items-center justify-center text-white font-bold text-2xl shadow-lg">
            <%= @contact_message.name.to_s.first&.upcase || 'U' %>
          </div>
          <div class="flex-1">
            <h1 class="text-3xl font-extrabold text-white mb-2">
              <%= @contact_message.subject.presence || "No Subject" %>
            </h1>
            <div class="flex items-center gap-4 text-sm text-indigo-100">
              <span class="flex items-center gap-2">
                <i class="fas fa-user"></i>
                <%= @contact_message.name %>
              </span>
              <span class="flex items-center gap-2">
                <i class="fas fa-envelope"></i>
                <%= @contact_message.email %>
              </span>
              <span class="flex items-center gap-2">
                <i class="far fa-clock"></i>
                <%= @contact_message.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
            </div>
          </div>
          <% if @contact_message.read? %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-xs font-bold bg-emerald-100 text-emerald-700">
              <i class="fas fa-check-circle mr-2"></i>Read
            </span>
          <% else %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-xs font-bold bg-amber-100 text-amber-700 animate-pulse">
              <i class="fas fa-circle mr-2"></i>Unread
            </span>
          <% end %>
        </div>
      </div>

      <!-- Message Content -->
      <div class="px-8 py-8 bg-gradient-to-br from-white to-indigo-50/30">
        <div class="prose prose-indigo max-w-none">
          <div class="bg-white rounded-2xl border-2 border-indigo-100 p-6 shadow-md">
            <div class="text-indigo-900 leading-relaxed whitespace-pre-wrap">
              <%= @contact_message.message %>
            </div>
          </div>
        </div>
      </div>

      <!-- Reply Section -->
      <div class="px-8 py-6 bg-gradient-to-r from-purple-50 to-indigo-50 border-t border-purple-100">
        <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
          <i class="fas fa-reply text-indigo-600"></i>
          Send Reply
        </h3>

        <%= form_with url: reply_admin_contact_message_path(@contact_message), method: :patch, local: true do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.text_area "contact_message[reply]",
                    rows: 6,
                    placeholder: "Type your response here...",
                    class: "w-full px-4 py-3 rounded-xl border-2 border-indigo-200 text-indigo-900 bg-white font-medium focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent shadow-sm resize-none" %>
            </div>

            <div class="flex items-center justify-between">
              <p class="text-xs text-indigo-600">
                <i class="fas fa-info-circle mr-1"></i>
                Reply will be sent to <strong><%= @contact_message.email %></strong>
              </p>

              <%= f.submit "Send Reply",
                    class: "px-8 py-3 rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold shadow-lg hover:shadow-xl transition-all duration-200 cursor-pointer" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Message Details Card -->
    <div class="rounded-2xl bg-white/80 backdrop-blur-md border border-purple-200 shadow-lg p-6">
      <h3 class="text-lg font-bold text-indigo-900 mb-4 flex items-center gap-2">
        <i class="fas fa-info-circle text-indigo-600"></i>
        Message Details
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <div class="text-xs font-bold text-purple-600 uppercase tracking-wide mb-1">Received</div>
          <div class="text-sm font-semibold text-indigo-900">
            <%= time_ago_in_words(@contact_message.created_at) %> ago
          </div>
          <div class="text-xs text-slate-500 mt-0.5">
            <%= @contact_message.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>

        <div>
          <div class="text-xs font-bold text-purple-600 uppercase tracking-wide mb-1">Status</div>
          <div class="text-sm font-semibold text-indigo-900">
            <%= @contact_message.read? ? "Read" : "Unread" %>
          </div>
          <% if @contact_message.read_at %>
            <div class="text-xs text-slate-500 mt-0.5">
              Read <%= time_ago_in_words(@contact_message.read_at) %> ago
            </div>
          <% end %>
        </div>

        <div>
          <div class="text-xs font-bold text-purple-600 uppercase tracking-wide mb-1">Reply Status</div>
          <div class="text-sm font-semibold text-indigo-900">
            <%= @contact_message.reply.present? ? "Replied" : "Pending" %>
          </div>
          <% if @contact_message.reply_at %>
            <div class="text-xs text-slate-500 mt-0.5">
              <%= time_ago_in_words(@contact_message.reply_at) %> ago
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</main>