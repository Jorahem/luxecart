<div class="p-6">
  <div class="flex items-start justify-between gap-4 mb-5">
    <div>
      <h1 class="text-2xl font-bold text-white">Message</h1>
      <div class="text-sm text-gray-400 mt-1">
        From <span class="text-gray-200 font-medium"><%= @contact_message.name %></span>
        (<%= @contact_message.email %>)
        â€¢ <%= @contact_message.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    </div>

    <% unless @contact_message.read? %>
      <%= button_to "Mark as read",
        mark_read_admin_contact_message_path(@contact_message),
        method: :patch,
        class: "px-3 py-2 rounded-xl bg-emerald-600 hover:bg-emerald-500 text-sm font-semibold" %>
    <% end %>
  </div>

  <div class="rounded-2xl bg-white/5 border border-white/10 p-5">
    <div class="text-sm text-gray-400">Subject</div>
    <div class="text-white font-semibold"><%= @contact_message.subject.presence || "â€”" %></div>

    <div class="mt-4 text-sm text-gray-400">Message</div>
    <div class="mt-1 text-gray-100 whitespace-pre-wrap"><%= @contact_message.message %></div>
  </div>
</div>