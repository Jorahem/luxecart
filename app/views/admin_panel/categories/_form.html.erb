<%= form_with model: [:admin, @category], local: true do |f| %>
  <div class="space-y-5">
    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Name</label>
      <%= f.text_field :name,
            class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Description</label>
      <%= f.text_area :description,
            rows: 4,
            class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <label class="block text-xs font-semibold text-slate-300 mb-2">Parent Category</label>
      <%= f.collection_select :parent_id,
            Category.ordered_by_name,
            :id,
            :name,
            { prompt: "None (root category)" },
            class: "w-full px-4 py-3 rounded-xl bg-white border border-white/10 text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <% if @category.respond_to?(:active) %>
      <div class="flex items-center gap-3">
        <%= f.check_box :active,
              class: "h-4 w-4 rounded border-white/10 bg-white text-indigo-600 focus:ring-indigo-500" %>
        <label class="text-sm text-slate-200">Active</label>
      </div>
    <% end %>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit class: "px-5 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow" %>

      <%= link_to "Cancel",
            admin_categories_path,
            class: "px-5 py-3 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 text-sm font-semibold text-black" %>
    </div>
  </div>
<% end %>