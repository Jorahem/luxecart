# .env.example — Local development environment variables (DO NOT commit real secrets)

# Primary DB: you can use DATABASE_URL OR DB_* variables (choose one)
# Option A: Single DATABASE_URL (recommended for simplicity)
# DATABASE_URL=postgresql://luxecart_user:luxecart_pass@localhost:5432/luxecart_development

# Option B: Separate DB_* variables (used by config/database.yml)
DB_USERNAME=luxecart_user
DB_PASSWORD=luxecart_pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME_DEVELOPMENT=luxecart_development
DB_NAME_TEST=luxecart_test

# Stripe (replace with your test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_key_here

# AWS S3 (production only — leave blank for local dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# Email (SMTP) — replace for real email sending
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=
SMTP_DOMAIN=localhost
DEFAULT_EMAIL_FROM=noreply@luxecart.local

# Redis
REDIS_URL=redis://localhost:6379/1

# App settings
APP_HOST=localhost:3000
APP_NAME=LuxeCart
SECRET_KEY_BASE=replace_with_real_secret_in_production

# Tax & shipping (example values)
TAX_RATE=0.08
SHIPPING_COST=9.99

# Admin (for local dev seeds only — do NOT use in production)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Password123!

# Rails
RAILS_ENV=development
RAILS_MAX_THREADS=5